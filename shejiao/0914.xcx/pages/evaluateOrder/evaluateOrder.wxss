/* pages/evaluateOrder/evaluateOrder.wxss */
page{
  background: #f9f9f9;
}
.evaluate_body{
  padding: 24rpx 24rpx 40rpx;
}
.evaluate_block{
  background: #fff;
  width: 100%;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}
.evaluate_top{
  display: flex;
  padding:30rpx;
  align-items: center;
}
.evaluate_top image{
  width: 120rpx;
  height: 120rpx;
}
.evaluate_top_r{
  padding-left: 20rpx;
}
.evaluate_top_r_titi{
  font-size: 28rpx;
  color: #333;
}
.evaluate_top_r_start {
  padding-top: 10rpx;
}
.evaluate_top_r_start icon{
   color: #FF0000;
   display: inline-flex;
   margin-right: 8rpx;
   font-size: 36rpx;
}
.evaluate_top_r_start text{
   display: inline-flex;
   font-size: 28rpx;
   padding-left: 20rpx;
   color:#999;
}

.evaluate_block_center{
  padding: 24rpx;
}
.evaluate_block_center_text{
  height: 310rpx;
  position: relative;
}
.evaluate_block_center_text textarea{
   height: 310rpx;
   position: relative;
}
.evaluate_block_center_text_image{
  position: absolute;
  top: 5rpx;
  width: 28rpx;
  height: 34rpx;
}
.input_placeholder{
  font-size: 26rpx;
  text-indent:30rpx;
  color: #999;
}
.evaluate_block_center_name{
  border-bottom: 1px solid #ECECEC;
  font-size: 26rpx;
  color: #818181;
  padding:26rpx 0 ;
  display: flex;
  align-items: center;
}
.evaluate_block_center_name_flex{
  display: flex;
  align-items: center;
}
.evaluate_block_center_name_flex icon{
  display: inline-flex;
  margin-right: 10rpx;
}
.evaluate_block_center_name_flex .icon-dui1-copy-copy{
  color: #f20;
}
.evaluate_block_center_list{
   padding-top: 20rpx;
}
.nav_scroll{
  white-space: nowrap;
  width: 100%;
  height: 200rpx
}
.image_list_block{
  display: inline-block;
  position: relative;
  margin-right: 10rpx;
  margin-top: 20rpx;
  width: 180rpx;
  height: 180rpx;
}
.image_list_block image{
  width: 180rpx;
  height: 180rpx;
  position: relative;
}
.image_list_block video{
  width: 180rpx;
  height: 180rpx;
  position: relative;
}
.image_list_block icon{
  position: absolute;
  z-index: 2;
  right: -13rpx;
  top: -15rpx;
  display: inline-flex;
}
.evaluate_block_center_upload{
   /* padding-top: 20rpx; */
}
.evaluate_block_center_add{
  text-align: center;
  padding-top: 40rpx;
  font-size: 24rpx;
  color: #999;
}
.evaluate_block_center_add image{
   width: 81rpx;
   height: 69rpx;
   margin-bottom: 15rpx;
}
.evaluate_block_bottom{
  padding: 25rpx 36rpx;
}
.evaluate_block_bottom_titi{
  display: flex;
  align-items: center;
  font-size: 26rpx;
  padding-bottom:20rpx;
  color: #333;
}
.evaluate_block_bottom_titi image{
   width: 36rpx;
   height: 31rpx;
   margin-right: 20rpx;
}
.evaluate_block_bottom_type{
  padding-left: 55rpx;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #333;
  height: 78rpx;
  justify-content: space-between;
}
.evaluate_block_bottom_type_r icon{
  display: inline-flex;
  margin-right: 8rpx;
  color: #FF0000;
  font-size: 36rpx;
}
.evaluate_block_bottom_type_r icon:last-child{
  margin-right: 0rpx;
}
/* radio的默认样式 */
radio .wx-radio-input {
  border-radius: 50%;
  width: 34rpx;
  height: 34rpx;
  border: 1px solid #a1a1a1;
}
.save_btn{
  width: 702rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
}