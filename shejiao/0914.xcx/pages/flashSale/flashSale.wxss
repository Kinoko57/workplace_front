/* 轮播 */
/* 团购消息轮播 */
.flash_scroll{
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
}
.flash_scroll swiper {
  height:36rpx;
  width: 100%;
  background: none;
}
.flash_scroll swiper-item {
  height: 60rpx;
  display: inline-flex;
  align-items: center;
}
.flash_scroll_text{
  display: inline-block;
  word-break: break-all;
  width: 702rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 22rpx;
  color: #929292;
}
.flash_scroll_text image{
  width:30rpx;
  height:30rpx;
  margin-left: -10rpx;
  border-radius: 50%;
}
.flash_scroll_text image:first-child{
  margin-left: 0;
}
.flash_scroll_text text{
  padding-left: 10rpx;
  
}



