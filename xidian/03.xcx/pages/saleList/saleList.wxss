.sale_list_block_list_top_r .sale_list_pro_titi{
  display: inline-flex;
  justify-content: space-between;
  align-items: center;
  width: 520rpx;
}
.sale_list_block_list_top_r .sale_list_pro_titi text:nth-child(1){
  overflow: hidden;
  display: block;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 1.5;
  width: 520rpx;
  display: inline-flex;
}
.sale_list_block_list_top_r .sale_list_pro_num{
   font-size:22rpx;
   color: #999;
   padding-top: 10rpx;
   display: flex;
   justify-content: space-between;
}
.sale_list_block_list_top_r .sale_list_pro_pri{
  padding-top: 20rpx;
}
.sale_list_after{
  font-size: 18rpx;
  color: #666;
  padding-top: 10rpx;
  position: absolute;
  bottom:26rpx;
}
.sale_list_after icon{
  font-size: 22rpx;
  color: #666;
  display: inline-flex;
  align-items: center;
  padding-left: 6rpx;
}
.sale_pri{
  font-size: 26rpx;
  color: #333;
  text-align: right;
  padding: 10rpx 0;
}