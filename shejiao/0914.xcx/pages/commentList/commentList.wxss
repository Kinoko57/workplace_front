/* pages/commentList/commentList.wxss */
.comment_bg{

}
.comment_body{

}
.comment_body .comment_head{
  margin: 20rpx 0;
  padding: 0 20rpx;
  border-bottom: 2rpx solid rgba(237,237,237,1);
}
.comment_body .comment_head .comment_type_list{
  overflow: hidden;
  margin-bottom: 10rpx;
}
.comment_body .comment_head .short_height{
  height: 94rpx;
}
.comment_body .comment_head .comment_type_list text{
  background:rgba(255,0,0,0.06);
  border-radius: 50rpx;
  font-size: 24rpx;
  padding: 8rpx 14rpx;
  float: left;
  margin-right: 16rpx;
  margin-bottom: 8rpx;
  color:rgba(255,12,0,1);
}
.comment_body .comment_head .comment_type_list .text_active{
  background: rgba(255,12,0,.8);
  color: #fff;
}
.comment_body .comment_head .comment_type_more{
  width: 200rpx;
  margin: 0 auto;
  text-align: center;
  font-size:24rpx;
  color:rgba(102,102,102,1);
  padding: 16rpx 0;
  display: flex;
  align-items: center;
}
.comment_body .comment_head .comment_type_more .iconfont{
  font-size: 24rpx;
  margin-left: 16rpx;
}
.comment_body .comment_head .comment_type_more .down{
  transform: rotate(90deg);
}
.comment_body .comment_head .comment_type_more .up{
  transform: rotate(-90deg);
}

/* 评价列表 */
.comment_list{
  padding: 0 20rpx;
}
.comment_block .comment_example {
  display: flex;
  justify-content: flex-start;
  margin-bottom: 20rpx;
}

.comment_block .comment_example .example_left {
  height: 50rpx;
  width: 50rpx;
  margin-right: 22rpx;
}

.comment_block .comment_example .example_left image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.comment_block .comment_example .example_right {
  color: #999;
  font-size: 26rpx;
  width: 640rpx;
}

.comment_block .comment_example .example_right .user_name {
  margin-bottom: -10rpx;
  color: #333;
}
.comment_block .comment_example .example_right .user_spec{
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size:24rpx;
  color:rgba(153,153,153,1);
  margin-top: 14rpx;
}
.comment_block .comment_example .example_right .user_spec .comm_star {
  display: inline-flex;
  margin-bottom: 12rpx;
  color: #e2e2e2;
}

.comment_block .comment_example .example_right .user_spec .comm_star .iconfont {
  font-size: 20rpx;
  display: inline-flex;
}

.comment_block .comment_example .example_right .comm_text {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  word-break: break-all;
  white-space: normal !important;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  line-height: 1.5;
  color: #333;
  margin-bottom: 12rpx;
}

.comment_block .comment_example .example_right .comm_img {
  overflow: hidden;
}

.comment_block .comment_example .example_right .comm_img image {
  width: 200rpx;
  height: 200rpx;
  float: left;
  border-radius: 10rpx;
  margin-right: 10rpx;
}

.comment_block .comment_example .example_right .comm_replay_list{
  background: #f2f2f2;
  border-radius: 6rpx;
  padding: 16rpx;
}
.comment_block .comment_example .example_right .comm_replay_list .replay_block{
  margin-bottom: 10rpx;
  font-size: 22rpx;
}
.comment_block .comment_example .example_right .comm_replay_list .replay_block:last-child{
  margin-bottom: 0;
}