  width: 658rpx;
  padding: 0 26rpx;
  background: #fff;
  border-radius: 10rpx;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  top: 10rpx;
  
  /* margin-bottom: 22rpx */
}
.m_title_new{
  padding:15rpx 0;
