/* pages/viewArticle/viewArticle.wxss */
page{
  background: #010101;
}
.view_banner {
  width: 750rpx;
  position: relative;
  background-color: #010101;
}
.view_fiexd_follow{
  position: absolute;
  left:35rpx;
  top: 20rpx;
  /* width:280rpx; */
  height:66rpx;
  display: flex;
  align-items: center;
  border-radius: 33rpx;
  background:rgba(0,0,0,0.24);
}
.view_fiexd_follow .follow_image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin:0 6rpx
}
.view_fiexd_follow .follow_name{
  color: #fff;
  max-width: 120rpx;
  padding: 0 20rpx 0 10rpx;
}
.view_fiexd_follow .follow_name text:nth-child(1){
  text-overflow: ellipsis;
  display: block;
  max-width: 110rpx;
  font-size: 20rpx;
  display: block;
  white-space: nowrap;
  overflow: hidden;
}
.view_fiexd_follow .follow_name text:nth-child(2){
  font-size: 18rpx;
  display: block;
}
.view_fiexd_follow .folow_btn{
  height: 50rpx;
  background-color: #fff;
  font-size: 22rpx;
  line-height: 50rpx;
  padding: 0 10rpx;
  border-radius: 25rpx;
  color: #FF0000;
} 
.view_fiexd_descri{
  position: absolute;
  z-index: 99;
  bottom: 0;
  font-size: 24rpx;
  padding: 36rpx 24rpx;
  width: 702rpx;
  color: #fff;
  background:rgba(0,0,0,0.24);
}
.view_banner swiper {
  width: 750rpx;
  position: relative;
  overflow: hidden;
  background-color: #010101;
}
.view_banner swiper image {
  width: 750rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.view_title{
  color: #fff;
  font-size: 24rpx;
  padding: 0 26rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin: 20rpx 0;
}
.view_fiexd{
  position: fixed;
  width: 100%;
  bottom: 0;
}
.view_fiexd_overflow{
  height: 100rpx;
  padding: 0 24rpx;
  display: flex;
  font-size: 24rpx;
  color: #fff;
  background-color: #010101;
  justify-content: space-between;
  align-items: center;
}
.view_fiexd_bottom{
  padding-bottom: 68rpx;
}
.view_fiexd .view_fiexed_left{
  display: inline-flex;
  align-items: center;
  color: #999;
  margin-right: 6rpx;
}
.view_fiexd .view_fiexed_left icon{
  font-size: 30rpx;
  display: inline-flex;
  margin-right: 10rpx;
}
.view_fiexed_right text{
  padding-left: 6rpx;
}

.view_fiexed_right .iconfont{
  display: inline-flex;
  font-size: 30rpx;
  color: #f20;
}
.view_fiexed_right{
  display: inline-flex;
  align-items: center;
}
.view_fiexed_right_l{
  padding-right: 20rpx;
  display: inline-flex;
  align-items: center;
}
/* 视屏 */
.view_video{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}
.view_video video{
  width: 750rpx;
}