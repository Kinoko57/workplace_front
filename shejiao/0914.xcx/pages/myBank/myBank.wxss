/* pages/mycard/mycard.wxss */
.my_card_bg{
  border-top: 1px solid #ccc;
  padding-top: 30rpx;
}

.my_card_bg .my_card_block{
  position: relative;
  width: 702rpx;
  height: 328rpx;
  margin: -160rpx auto 0;
  border-radius: 12rpx;
  overflow: hidden;
}
.my_card_bg .my_card_block:first-child{
  margin-top: 0;
}
.my_card_bg .my_card_block:last-child{
  margin-bottom: 30rpx;
}
.my_card_bg .my_card_block .card_image{
  position: absolute;
  width: 702rpx;
  height: 328rpx;
  background-color: #f9f9f9;
  z-index: 1;
}
.my_card_block_cont{
  position: relative;
  padding: 30rpx 30rpx 0;
  z-index: 2;
}
.my_card_block_cont_flex{
  display: flex;
  align-items: center;
  /* justify-content: space-between; */
}
.my_card_block_cont_flex_l{
  display: inline-flex;
  color: #fff;
  align-items: center;
}
.my_card_block_cont_flex_l .image_icon{
  width: 102rpx;
  height: 102rpx;
  border-radius: 50%;
  background-color: #fff;
}
.my_card_block_cont_flex_l .card_name{
   padding-left: 25rpx;
   font-size: 30rpx;
}
.my_card_block_cont_flex_l .card_name text:nth-child(2){
  padding-top: 15rpx;
  display: block;
  font-size: 26rpx;
}
.my_card_block_cont_flex_r{
  color: #fff;
  font-size: 36rpx;
  padding-left: 15rpx;
}
.my_card_block_cont_flex_r text{
  display: block;
}
.my_card_block_cont_flex_r text:nth-child(2){
   font-size: 30rpx;
}
.addmycard{
  position: fixed;
  bottom:58rpx;
  width: 100%;
  left: 0;
}
.addmycard text{
  display: block;
  width: 702rpx;
  height:80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  margin: 0 auto;
  border-radius: 40rpx;
}