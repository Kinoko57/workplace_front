.log_body_block:last-child .log_body_block_l text:nth-child(2){
   display: none;
}
.log_btn{
  padding: 0 24rpx;
  margin-top: 30rpx;
  text-align: right;
}
.log_btn text{
  display: inline-block;
  height: 56rpx;
  line-height: 56rpx;
  padding: 0 25rpx;
  border-radius: 28rpx;
  font-size: 26rpx;
  color: #666;
  border:1px solid #999;
}