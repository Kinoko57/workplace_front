/* pages/search/search.wxss */

/* 搜索历史 */

page {
  background: #fff;
}

.search_his {
  position: relative;
  width: 100%;
  height: 100%;
  background: #fff;
}

.search_header {
  padding: 20rpx 26rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  border-bottom: 2rpx solid #e0e0e0;
}

.search_header .search_input {
  width: 80%;
  /* width: 540rpx; */
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 50rpx;
  background: #f2f2f2;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 0 26rpx;
}

.search_input icon {
  color: #ec5580;
  font-size: 30rpx;font-weight: bold;
}

.search_input .close {
  color: #7c7c7c;
  font-size: 30rpx;font-weight: bold;
}

.search_header .search_input input {
  font-size: 24rpx;
  /* width: 434rpx; */
  width: 84%;
  margin-left: 10rpx;
  height: 60rpx;
}

.search_input .input-placeholder {
  font-size: 24rpx;
  color: #9b9b9b;
}

.search_header text {
  font-size: 30rpx;
  /* font-weight: bold; */
  color: #555;
}

.his_list {
  padding: 0 26rpx;
}

.his_list .his_header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  margin: 30rpx 0;
}

.his_header .red_text {
  color: #ec5580;
}

.h_list {
}

.h_list text {
  display: inline-block;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 24rpx;
  color: #999;
  background: #f1f2f6;
  border-radius: 20rpx;
  padding: 0 26rpx;
  margin-bottom: 22rpx;
  margin-right: 40rpx;
}

.hot_search {
  padding: 0 26rpx;
}

.hot_search .hot_header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  margin: 30rpx 0;
}

.hot_right .iconfont {
  color: #ec5580;
  font-size: 24rpx;
}

.hot_right .red_text {
  color: #ec5580;
}

.hot_list text {
  display: inline-block;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 24rpx;
  color: #999;
  background: #f1f2f6;
  border-radius: 20rpx;
  padding: 0 26rpx;
  margin-bottom: 22rpx;
  margin-right: 40rpx;
}
