.sure_other {
  background: #fff;
}

.sure_other .other_blcok {
  padding: 0 26rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 2rpx solid #e0e0e0;
  color: #999;
  font-size: 24rpx;
}

.other_blcok .type text {
  color: #999;
  font-size: 24rpx;
}

.other_blcok view text {
  color: #555;
  font-size: 24rpx;
  font-family: 'DIN';
}

.other_blcok view icon {
  margin-left: 30rpx;
}

.other_blcok view .sure_score {
  font-size: 30rpx;
  /* font-weight: bold; */
  color: #666;
  /* margin-right: 30rpx; */
}

.other_blcok view .sure_price {
  font-size: 50rpx;
  color: #ff8d97;
}

/* 空白的块，解决底部导航占领高度 */

.null_height {
  height: 100rpx;
}

.null_height_iphonex {
  height: 168rpx;
}

.sure_btn {
  box-shadow: 0 8rpx 20rpx 16rpx #dadada;
  position: fixed;
  bottom: 0;
  height: 100rpx;
  width: 100%;
  z-index: 100;
}

.sure_btn_height {
  height: 168rpx;
  background: #fff;
}

.sure_btn button {
  background: #ff8d97;
  color: #fff;
  font-size: 40rpx;
  border-radius: 0;
}

.surecountdown {
  position: absolute;
  color: #fff;
  top: 16rpx;
  right: 26rpx;
}

.surecountdown icon {
  margin-right: 6rpx;
}
