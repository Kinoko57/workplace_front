/* pages/Interested/Interested.wxss */

page {
  background: #fff;
}

.interested {
  /* font-family: SimHei; */
  margin: 81rpx;
}

.interested .i_header {
  text-align: center;
}

.interested .i_header text {
  font-size: 26rpx;
  color: #8f8f8f;
  display: block;
}

.i_header .header_title {
  font-size: 44rpx !important;
  font-weight: bold;
  color: #343434;
  margin-bottom: 22rpx;
}

.i_body {
  margin-top: 54rpx;
}

.i_likeList {
  overflow: hidden;
  height: 716rpx;
}

.i_like {
  position: relative;
  float: left;
  margin: 14rpx;
  text-align: center;
}

.i_like .i_like_img {
  width: 168rpx;
  height: 168rpx;
}

.i_like checkbox {
  position: absolute;
  right: -2rpx;
  top: 0;
}

checkbox .wx-checkbox-input {
  border-radius: 50%;
  width: 34rpx;
  height: 34rpx;
  border: 1px solid #d8d8d8;
  background: #484848;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border: none;
  background: #ff8d97;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 50%;
  width: 34rpx;
  height: 34rpx;
  line-height: 34rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.i_like text {
  display: block;
  font-size: 26.65rpx;
  color: #373737;
}

.i_like_btn button {
  margin-top: 58rpx;
  width: 460rpx;
  height: 86rpx;
  line-height: 86rpx;
  border: none;
  background: #ff8d97;
  color: #fff;
  outline: none;
  font-size: 40rpx;
  border-radius: 20rpx;
}
