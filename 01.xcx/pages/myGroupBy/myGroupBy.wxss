/* pages/myGroupBy/myGroupBy.wxss */
@import '../footer/footer.wxss';

.sale_body {
  background: #fff;
}

.sale_body .sale_banner {
  height: 450rpx;
}

.sale_body .sale_banner image {
  height: 450rpx;
  width: 100%;
}

.sale_body .sale_tab {
  height: 120rpx;
  width: 100%;
  white-space: nowrap;
}

.sale_tab .sale_nav {
  overflow: hidden;
  text-align: center;
  position: relative;
  height: 120rpx;
  width: 192rpx;
  display: inline-block;
}

.sale_tab .sale_nav view {
  height: 80rpx;
  line-height: 80rpx;
  background: #000;
  padding: 10rpx 0;
}

.sale_tab .sale_nav .active {
  background: #ff8d97;
}

.sale_nav view text {
  display: block;
  text-align: center;
  color: #fff;
  margin: 0;
  padding: 0;
}

.sale_tab .sale_nav image {
  height: 18rpx;
  width: 28rpx;
  /* transform: rotate(90deg); */
  position: absolute;
  bottom: 4rpx;
}

.sale_nav view .sale_time {
  font-size: 30rpx;
  font-weight: bold;
  font-family: 'DIN';
}

.sale_nav view .sale_states {
  font-size: 26rpx;
}

.sale_nav .active .sale_time {
  font-size: 50rpx;
  color: #fff600;
  margin-top: -16rpx;
  font-weight: bold;
}

.sale_nav .active .sale_states {
  /* font-size: 30rpx;font-weight: bold; */
  color: #fff600;
  /* font-weight: bold; */
}

.sale_list {
  /* padding: 0 26rpx; */
  padding: 0 26rpx;
  /* background: #fff; */
  padding-top: 30rpx;
}

.sale_list_null {
  padding: 0 26rpx;
}

.sale_list .sale_pro {
  /* padding: 0 26rpx;
  height: 260rpx;
  background: #fff;
  border-bottom: 1px solid #ebebeb;
  display: flex;
  align-items: center; */
  height: 342rpx;
  background: #fff;
  display: flex;
  align-items: center;
  border-radius: 12rpx;
  box-shadow: 0 3rpx 4rpx 2rpx #e4e4e4;
  padding: 0 40rpx;
  margin-bottom: 30rpx;
}

.sale_pro .pro_img {
  float: left;
  /* margin-left: 18rpx; */
  margin-right: 30rpx;
  position: relative;
}

.pro_img image {
  width: 260rpx;
  height: 260rpx;
}

.sale_pro .pro_info {
  width: 100%;
}

.pro_info .pro_title {
  font-size: 26rpx;
  color: #121212;
  /* margin: 20rpx 0; */
  margin-bottom: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.pro_info .pro_progress {
  height: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 22rpx 0;
}

.pro_progress .prog {
  width: 300rpx;
  height: 15rpx;
  border: 2rpx solid #ff8d97;
  background: #ffc4d5;
  border-radius: 10rpx;
}

.pro_progress .prog view {
  width: 60%;
  height: 15rpx;
  background: #ff8d97;
  border-radius: 10rpx;
}

.pro_progress text {
  color: #ea3364;
  font-size: 22rpx;
  font-family: 'DIN';
}

.pro_info .pro_spec {
  /* width: 490rpx; *//* overflow: hidden; *//* height: 64rpx; *//* display: flex;
  align-items: center;
  justify-content: space-between; */
}

.pro_spec .pro_price {
  font-family: 'DIN';
  /* width: 240rpx; */
  display: flex;
  align-items: flex-end;
  margin-bottom: 30rpx;
}

.pro_price .peo_nowprice {
  /* color: #ff8d97; */
  color: #313131;
  font-size: 30rpx;
  font-weight: bold;
}

.pro_price .pro_integral {
  font-size: 24rpx;
  /* color: #ff8d97; */
  color: #313131;
  /* margin-left: 8rpx; */
  margin-right: 20rpx;
}

.pro_price .pro_integral_point {
  font-size: 30rpx;
  font-weight: bold;
  /* color: #ff8d97; */
  color: #313131;
  /* margin-left: 8rpx; */
}

.pro_price .pro_inter_img {
  font-size: 30rpx;
  font-weight: bold;
  display: inline-flex;
  color: #313131;
  /* margin-right: 30rpx; */
}

/* .pro_price .pro_inter_img image {
  width: 24rpx;
  height: 20rpx;
} */

.pro_price .pro_orig {
  font-size: 22rpx;
  color: #989898;
  margin-bottom: 6rpx;
  /* margin-left: 10rpx; */
}

.pro_price .pro_orig .line {
  text-decoration: line-through;
  margin-left: 14rpx;
}

.pro_spec .pro_group {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.pro_group text {
  font-size: 24rpx;
  color: #999;
}

.pro_group .pro_integral {
  color: #ff8d97;
  /* margin-right: 20rpx; */
}

.pro_spec .pro_icon {
  margin-right: 4rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.pro_spec .pro_icon text {
  font-size: 20rpx;
  color: #999;
}

.pro_icon image {
  width: 50rpx;
  height: 46rpx;
}

.pro_icon button {
  width: 140rpx;
  height: 52rpx;
  color: #fff;
  font-size: 26rpx;
  padding: 0rpx 20rpx;
  margin: 0;
  line-height: 52rpx;
  border-radius: 16rpx;
}

.pro_icon .active {
  background: #ff8d97;
}

.pro_icon .end {
  background: #d3d3d3;
}

.sale_body_list .sale_tab {
  height: 120rpx;
}

.order-foot {
  height: 84rpx;
  line-height: 84rpx;
  /* background: #fff; */
  text-align: center;
  /* margin-top: -30rpx; */
  background: #f2f2f2;
}

.order-foot text {
  font-size: 23.97rpx;
  color: #bebebe;
}

/* 空白的块，解决底部导航占领高度 */

.null_height {
  height: 106rpx;
}
