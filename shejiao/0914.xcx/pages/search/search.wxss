/* pages/search/search.wxss */

/* 搜索历史 */

page {
  background: #fff;
}

.search_his {
  position: relative;
  width: 100%;
  height: 100%;
  background: #fff;
}

.search_header {
  padding: 20rpx 26rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  /* border-bottom: 2rpx solid #e0e0e0; */
}

.search_header .search_input {
  width: 80%;
  /* width: 540rpx; */
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 50rpx;
  background: #f2f2f2;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 0 26rpx;
}

.search_input icon {
  font-size: 30rpx;
  color: #C1C1C1;
  margin: 0 10rpx;
  display: inline-flex;
  align-items: center;
}

.search_input .close {
  color: #7c7c7c;
  font-size: 30rpx;font-weight: bold;
}

.search_header .search_input input {
  font-size: 24rpx;
  /* width: 434rpx; */
  width: 84%;
  margin-left: 10rpx;
  height: 60rpx;
}

.search_input .input-placeholder {
  font-size: 24rpx;
  color: #C1C1C1;
}

.search_header text {
  font-size: 30rpx;
  /* font-weight: bold; */
  color: #555;
}

.his_list {
  padding: 0 26rpx;
}

.his_list .his_header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  margin: 30rpx 0;
}
.his_list .his_header text{
  font-weight: bold;
}

.h_list {
}

.h_list text {
  min-width: 50rpx;
  text-align: center;
  display: inline-block;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 24rpx;
  color: rgba(128,128,128,1);
  border:2rpx solid rgba(228,228,228,1);
  border-radius: 50rpx;
  padding: 0 26rpx;
  margin-bottom: 22rpx;
  margin-right: 40rpx;
  max-width: 80%;
  overflow: hidden;/*超出部分隐藏*/
  text-overflow:ellipsis;/* 超出部分显示省略号 */
  white-space: nowrap;/*规定段落中的文本不进行换行 */
}

.hot_search {
  padding: 0 26rpx;
}

.hot_search .hot_header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #333;
  margin: 30rpx 0;
}
.hot_search .hot_header text{
  font-weight: bold;
}
.hot_right .iconfont {
  font-size: 24rpx;
}

.hot_list text {
  display: inline-block;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 24rpx;
  border:2rpx solid rgba(228,228,228,1);
  color:rgba(128,128,128,1);
  border-radius: 50rpx;
  padding: 0 26rpx;
  margin-bottom: 22rpx;
  margin-right: 40rpx;
  min-width: 50rpx;
  text-align: center;
}
