/* pages/addArticle/addArticle.wxss */
page{
  background: #f9f9f9;
}
.add_bg{
  padding: 26rpx;
}
.input_placeholder{
  font-size: 26rpx;
  color: #a7a7a7;
}
.add_body{
  /* background: #fff; */
  padding:10rpx;
  /* border-radius: 12rpx; */
}
.add_body .add_detail{
  height: 256rpx;
}
.add_body .add_detail textarea{
  padding: 20rpx;
  min-height: 80px;
  max-height: 100px;
}
.add_body .add_imgs{
  padding: 20rpx;
  overflow: hidden;
}
.add_body .add_imgs .img_block{
  width: 200rpx;
  height: 200rpx;
  margin-right: 10rpx;
  float: left;
  position: relative;
  margin-bottom: 10rpx;
}
.add_body .add_imgs .img_block image{
  width: 100%;
  height: 100%;
  position: relative;
}
.add_body .add_imgs .img_block video{
  width: 200rpx;
  height: 200rpx;
  position: relative;
}
.add_body .add_imgs .img_block icon{
  position: absolute;
  top: -29rpx;
  right: -11rpx;
  color: #666;
  z-index: 20;
}
.add_body .add_imgs .add_img_stytle{
  background: #F2F2F2;
  width: 200rpx;
  height: 200rpx;
  text-align: center;
  line-height: 200rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  float: left;
}
.add_body .add_imgs .add_img_stytle .iconfont{
  font-size: 60rpx;
  color: #a7a7a7;
}
.add_btn{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.add_btn view.cancel{
  border: 2rpx solid #dbdbdb;
  border-radius: 10rpx;
}
.add_btn view.sure{
  color: #fff;
  height: 80rpx;
  margin: 20rpx auto 0;
  width: 650rpx;
  line-height:80rpx;
  text-align: center;
  border-radius: 8rpx;
}