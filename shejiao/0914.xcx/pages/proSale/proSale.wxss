}
.proSale_type_l image{
  width: 65rpx;
  height: 66rpx;
  margin-right:16rpx ;
  margin-left: 20rpx;
}
.proSale_type_r{
   font-size:20rpx;
   display: inline-flex;
   align-items: center;
}
.proSale_type_r_tips{
  display: block;
  width: 360rpx;
  text-align: left;
}
.proSale_type_r icon{
  font-size: 22rpx;
  display: inline-flex;
  align-items: center;
  color: #000;
  padding-left: 6rpx;
}
.proSale_body_type_block_list .cancel_color{
  color: #999;
}
