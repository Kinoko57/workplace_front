/* pages/orderDetail/orderDetail.wxss */
page{
  background: #f9f9f9;
}

.order_body{
  padding: 20rpx 26rpx 0;
}
.countdown_bg{
  background: #fff;
  width: 100%;
  padding: 20rpx 0;
  border-radius: 12rpx;
  /* margin-top: 20rpx; */
  border-bottom: 1px solid #ededed;
}
.countdown_bg .countdown_block{
  font-size: 24rpx;
  padding:0 30rpx;
  display: flex;
  align-items: center;
}
.countdown_bg .countdown_block text{
  margin: 0 4rpx;
}
.trank_block{
  padding-top: 20rpx;
}
.trank_block .order_track{
  display: flex;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.trank_block .order_track image{
  width:32rpx;
  height: 27rpx;
  padding-top: 4rpx;
}
.track_r{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.order_track_l{
  color: #333;
  font-size: 24rpx;
  display: flex;
  align-items: center;

}
.order_track_l_l{
  width: 548rpx;
}
.order_track_l icon{
  margin: 0 15rpx;
}
.order_track_r{
   width: 110rpx;
   display: flex;
   justify-content: space-between;
   align-items: center;
}
.trank_block .order_track .order_track_r text{
  width: 1rpx;
  height: 54rpx;
  display: inline-block;
  background: #e5e5e5;
}
.trank_block .order_track .order_track_r image{
  width: 85rpx;
  height: 85rpx;
  border-radius: 50%;
}
.block_info{
  background: #fff;
  border-radius: 12rpx;
  padding: 0 20rpx;
}
.flash_chose_info{
  padding: 20rpx 0;
}
.flash_chose_info .flash_sure_addr {
  display: flex;
  padding-top: 20rpx;
  padding-bottom: 20rpx;

}
.flash_sure_addr image{
  display: inline-flex;
  width: 32rpx;
  height: 33rpx;
  margin-top: 8rpx;
}
.flash_sure_addr .info_block{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}
.flash_sure_addr .add_name {
  max-width: 320rpx;
  display: inline-block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;

}
.add_address text{
  display: inline-block;
  line-height:1.5;
  font-size: 22rpx;
  color: #999;
  width:580rpx ;
  word-break: break-all;
}
.or_wra{
  margin-bottom: 40rpx;
}
.pay_body_other{
  padding:24rpx;
}
.pay_body_other .pay_titi{
 font-size: 26rpx;
 color: #333;
 padding-bottom:23rpx;
 display: flex;
 align-items: center;
 padding-left: 8rpx;
 border-bottom: 1px solid #EFEFEF;
}
.pay_other_cont{
  padding: 10rpx 0;
}
.pay_body_other .pay_other_list{
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #EFEFEF;
}
.pay_body_other .pay_other_list:last-child{
  border-bottom: 0;
  margin-bottom: 0;
  padding-bottom: 0;
}
.pay_body_other .pay_other_list_flex{
   display: flex;
}
.pay_other_cont_r{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 468rpx;
}
.pay_other_tit{
  font-size: 24rpx;
  color: #333;
  padding-top: 8rpx;
  width: 300rpx;
  overflow: hidden;
  text-overflow: -o-ellipsis-lastline;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
 }
 .pay_other_spec{
  font-size: 24rpx;
  color: #999;
  padding-top: 20rpx;
  width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
 }
 .pay_other_mun{
  font-size: 24rpx;
  color: #999;
  display: block;
 }
 .pay_other_pri{
  font-size: 28rpx;
  color: #333;
  text-align: right;
  padding-top: 15rpx;
 }
 .pay_other_pri .symbol{
   font-size: 18rpx;
 }
.pay_body_other .pay_other_list image{
  width: 160rpx;
  height: 160rpx;
  margin-right: 22rpx;
}
.or_status{
  margin-top: 20rpx;
  color: #666;
  font-size: 24rpx;
}
.or_height{
  line-height:90rpx;
  min-height: 90rpx;
  border-bottom: 1px solid #F7F7F7;
  color: #333;
}
.pay_other_msg{
  font-size: 26rpx;
  padding: 20rpx 0;
  display: flex;
  color: #333;
}
.pay_other_msg text.text1{
  display: inline-flex;
  font-size: 26rpx;
  width: 150rpx;
}
.pay_other_msg text.text2{
 display: inline-flex;
 font-size: 28rpx;
 width: 500rpx;
 word-break: break-all;
}
.or_height:last-child{
  border-bottom:0
}
.or_height text:nth-child(1){
  font-size: 26rpx;
  width: 150rpx;
  display: inline-flex;
}
.or_height text:nth-child(2){
  font-size: 28rpx;
  /* padding-left: 30rpx; */
}
.pay_disc{
  display: flex;
  font-size: 24rpx;
  align-items: center;
  color: #333;
  justify-content: space-between;
  line-height: 90rpx;
  border-bottom: 1px solid #f7f7f7;
}
.pay_disc text:nth-child(1){
  font-size: 26rpx;
}
.pay_disc view:nth-child(2){
  font-size: 28rpx;
}
.pay_disc view.const_cash{
  font-size: 48rpx;
  color: #FF0000;
}
.pay_disc:last-child{
  border-bottom: 0;
}
.copy{
  display: inline-flex;
  padding:0 15rpx;
  height: 30rpx;
  color: #333;
  align-items: center;
  font-size: 18rpx;
  background: #eee;
  border-radius: 15rpx;
  margin-left: 15rpx;
}
.or_fixed{
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #fff;
  border-top: 1px solid #ededed;
}
.or_fixed_flex{
  padding: 30rpx 30rpx;
  text-align: right;
}
.or_fixed .or_fixed_flex .button{
  display: inline-flex;
  font-size: 22rpx;
  height:60rpx;
  padding: 0;
  justify-content: center;
  align-items: center;
  width: 146rpx;
  border-radius: 30rpx;
  margin-left: 15rpx;
}
.active_text{
  border: 1px solid #f2362c;
}
.cancel_text{
  border: 1px solid #666;
  color: #333;
}
.sale_after{
  text-align: right;
}
.sale_after text{
  display: inline-block;
  margin: 10rpx 0 0 10rpx;
  width: 148rpx;
  height: 56rpx;
  line-height:56rpx;
  border-radius: 28rpx;
  font-size: 24rpx;
  text-align: center;
  border:1px solid #BEBEBE;
  color: #333;
}
.sale_after text.active{
  border:1px solid #FF0000;
  color: #FF0000;
}
.view_addr{
  height: 36vh;
  top: calc(100% - 36vh);
  animation: modelSheet 300ms ease-out;
}
.view_addr .model_title{
  text-align: left;
  padding: 40rpx 30rpx;
  font-size: 30rpx;
  font-weight: bold;
}
.view_addr .model_body {
  padding: 20rpx 50rpx;
  height: 30%;
  font-size: 28rpx;
  color: #333;
}
.view_addr .model_body .model_addr{
  font-size: 22rpx;
  margin-top: 24rpx;
}
.view_addr .model_body .model_block{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.view_addr .model_body .model_block .picker_text{
  font-size: 26rpx;
  display: inline-flex;
  align-items: center;
  color: #666;
  width: 500rpx;
  justify-content: flex-end;
}
.view_addr .model_body .model_block .picker_text icon{
  display: inline-flex;
  font-size: 26rpx;
}
.view_addr .model_body .after_tracking {
  background: #fff;
  display: flex;
  align-items: center;
  height: 80rpx;
}
.view_addr .model_body .after_tracking text {
  font-size: 26rpx;
}
.view_addr .model_body .after_tracking input{
  width: 400rpx;
  text-align: right;
}
.view_addr .model_footer{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.view_addr .buy_disable_btn{
  background: #E9E9E9;
  border-radius: 50rpx;
  width: 640rpx;
  color: #666;
  padding: 14rpx 0;
  font-weight: 400;
  font-size: 26rpx;
}
.view_addr .short_width{
  width: 45%;
  border-radius: 50rpx;
  font-size: 26rpx;
  font-weight: 400;
  padding: 14rpx 0;
}
.view_addr .buy_btn{
  background:linear-gradient(-90deg,rgba(221,44,47,1) 0%,rgba(255,80,83,1) 100%);
  color: #fff;
}
@keyframes modelSheet {
  from {
    top: 100%;
  }

  to {
    top: calc(100% - 36vh);
  }
}