  width: 100%;
  height: 86rpx;
  line-height: 86rpx;
  text-align: center;
  border: none;
  color: #fff;
  outline: none;
  font-size: 40rpx;
}

.saveInfo button.nBtn {
  background: rgba(202,204,218,1);
}

button[disabled]:not([type]) {
  color:#fff !important;
  background:#0d8d37 !important;
}

