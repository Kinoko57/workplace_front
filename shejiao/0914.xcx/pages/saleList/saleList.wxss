/* pages/saleList/saleList.wxss */
page{
  background: #f6f6f6;
}
.sale_nav{
  background: #fff;
  padding: 0 28rpx;
  display: flex;
  justify-content: space-between;
  color: #333333;
  height:90rpx; 
}
.nav_text{
  font-size: 30rpx;
  padding: 0 15rpx;
  margin: 0 10rpx;
  height: 89rpx;
  display: inline-block;
  line-height: 89rpx;
}
.nav_active{
  border-bottom:1px solid #e13816;
  display: inline-block;
}
.sale_list{
  padding-top: 20rpx;
}
.sale_list_scroll{
   
}
.sale_list_scroll .sale_list_block{
  margin-bottom: 20rpx;
  background: #fff;
  padding-bottom: 28rpx;
}
.sale_list_supName{
  font-size: 30rpx;
  color: #333;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #ededed;
  padding: 28rpx 26rpx 20rpx;
}
.sale_list_supName view:nth-child(2){
  font-size:24rpx;
  color: #333;
  display: inline-flex;
  align-items: center;
}
.sale_list_supName view:nth-child(2) icon{
   margin-right: 10rpx;
   color: #f20;
   display: inline-flex;
}
.sale_list_block_list{
   color: #333;
   font-size: 24rpx;
   background: #fff;
   padding: 22rpx 28rpx 24rpx;
   position: relative;
   border-bottom: 2px solid #f6f6f6;
}
.sale_list_block_list:last-child{
  border-bottom: 0;
}
.sale_list_block_list_top{
  display: flex;
}
.sale_list_block_list_top .sale_list_img{
   width: 126rpx;
   height: 126rpx;
   border-radius: 10rpx;
}
.sale_list_block_list_top_r{
   padding-left: 18rpx;
   width: 540rpx;
   position: relative;
}
.sale_list_pro_buy{
  text-align: right;
  padding: 0 20rpx;
  font-size: 22rpx;
}
.sale_list_pro_buy text{
  display: inline-block;
  text-align: center;
  width: 120rpx;
  height:46rpx;
  line-height:46rpx;
  border-radius: 23rpx;
  margin-left: 10rpx;
}
.sale_list_pro_buy text.active{
  border:1px solid #e13816;
}
.sale_list_pro_buy text.cancel{
  border:1px solid #999;
  color: #999;
}
.sale_list_pro_buy text.disable{
  border:1px solid #f0aea6;
  color: #f0aea6;
}
.sale_list_block_list_top_r .sale_list_pro_titi{
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  word-break: break-all;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.5;
  padding-top: 6rpx;
}
.sale_list_block_list_top_r .sale_list_pro_num{
   font-size: 18rpx;
   color: #666;
   padding-top: 10rpx;
}
.sale_list_after{
  font-size: 18rpx;
  color: #666;
  padding-top: 10rpx;
  /* position: relative;
  bottom:26rpx; */
}
.sale_list_after icon{
  font-size: 22rpx;
  color: #666;
  display: inline-flex;
  align-items: center;
  padding-left: 6rpx;
}