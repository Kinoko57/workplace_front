/* pages/viewArticle/viewArticle.wxss */
page{
  background: #010101;
}
.view_bg{
  position: relative;
}
.view_banner {
  padding-top: 8vh;
  width: 750rpx;
  margin: 0 auto;
}

.view_banner swiper {
  width: 750rpx;
  height: 75vh;
  background-color: #010101;
  /* height: 336rpx; */
}

.view_banner swiper image {
  width: 100%;
  height: 75vh;
}
.view_title{
  color: #fff;
  font-size: 24rpx;
  padding: 0 26rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin: 20rpx 0;
}
.view_fiexd{
  position: fixed;
  display: flex;
  justify-content: space-between;
  width: 100%;
  color: #fff;
  height: 80rpx;
  background: #161616;
  bottom: 0;
  font-size: 24rpx;
}
.view_fiexd_bottom{
  padding-bottom: 68rpx;
}
.view_fiexd .view_fiexed_left{
  padding-left: 26rpx;
  display: inline-flex;
  align-items: center;
  width:75%;
}

.view_fiexed_left .icon_block{
  min-width: 100rpx;
  padding: 0 10rpx;
  display: inline-flex;
  align-items: center;
}
.view_fiexed_left .icon_block .iconfont{
  color: #999;
  display: inline-flex;
  align-items: center;
  font-size: 40rpx;
  margin-right: 8rpx;
}
.view_fiexd .view_fiexed_right{
  padding-right: 26rpx;
  display: inline-flex;
  align-items: center;
  width: 25%;
  justify-content: flex-end;
}
.view_fiexd .view_fiexed_right .iconfont{
  display: inline-flex;
  align-items: center;
}