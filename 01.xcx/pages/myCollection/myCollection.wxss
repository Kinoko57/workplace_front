/* pages/myCollection/myCollection.wxss */
@import '../footer/footer.wxss';

page {
  background: #f2f2f2;
}

.my_collection {
  font-family: SimHei;
  background: #f2f2f2;
  overflow-x: hidden;
}

.coll_header {
  text-align: center;
  background: #ebebeb;
  height: 86rpx;
  line-height: 86rpx;
  display: flex;
  justify-content: space-between;
}

.coll_header text {
  padding-left: 26rpx;
  color: #515151;
  font-size: 24rpx;
}

.coll_header .coll_num {
  color: #ff8d97;
  font-size: 26rpx;
  padding-left: 0;
}

.coll_header .coll_edit {
  float: right;
  padding-right: 26rpx;
  color: #ff8d97;
  font-size: 24rpx;
}

.coll_body {
  height: 100%;
}

.coll_body .editDel {
  height: 92rpx;
  background: #fff;
  border-bottom: 1px solid #f2f2f2;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  bottom: 100rpx;
  width: 100%;
  z-index: 50;
}
.coll_body .editDel_iphonex{
  bottom: 170rpx;
}

.editDel .allCheck {
  margin-left: 26rpx;
  font-size: 26rpx;
  color: #555;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.editDel button {
  margin: 0;
  color: #ff8d97;
  background: transparent;
  border-radius: 32rpx;
  border: 3rpx solid #ff8d97;
  margin-right: 26rpx;
}

.editDel button::after {
  border: 2rpx solid transparent;
}

.coll_list {
}

/* 订单商品信息 */

.coll_list .coll_pro {
  padding: 0 26rpx;
  height: 220rpx;
  background: #fff;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  /* border-bottom: 1px solid #ebebeb; */
}
.coll_list .coll_pro .pro_block{
  display: inline-flex;
  align-items: center;
  width: 100%;
}
.coll_list .coll_pro .pro_block_short{
  width: 92%;
}
.coll_pro .pro_chose {
  float: left;
  display: flex;
  align-items: center;
  height: 262rpx;
  margin-left: 12rpx;
}

.coll_pro .pro_img {
  float: left;
  /* margin-top: 40rpx; */
  margin-left: 18rpx;
  margin-right: 30rpx;
  position: relative;
}

.pro_img image {
  width: 190rpx;
  height: 190rpx;
}

.pro_img .pro_tips {
  width: 190rpx;
  height: 52rpx;
  background: rgba(0, 0, 0, 0.6);
  line-height: 52rpx;
  text-align: center;
  position: absolute;
  bottom: 0;
}

.pro_tips text {
  color: #fff;
  font-size: 24rpx;
}

.coll_pro .pro_info {
  float: left;
  width: 490rpx;
}

.coll_pro .pro_info_edit {
  width: 440rpx;
}

.pro_info .pro_title {
  /* width: 440rpx; */
  font-size: 24rpx;
  color: #444;
  /* margin-top: 50rpx; */
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.pro_title image {
  width: 68rpx;
  height: 24rpx;
}

.pro_title  .pro_icon {
  background: #ff8d97;
  height: 26rpx;
  padding: 0 6rpx;
  font-size: 20rpx;
  color: #fff;
  border-radius: 8rpx;
  line-height: 26rpx;
  text-align: center;
  display: inline-block;
  margin-right: 10rpx;
}

.pro_title  .pro_level {
  width: 68rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  position: relative;
  height: 24rpx;
}

.pro_title  .pro_level text {
  font-size: 16rpx;
  color: #fefefe;
  position: absolute;
  left: 46%;
  top: 50%;
  transform: translate(-50%, -50%);
  white-space: nowrap;
}

.pro_info .pro_spec {
  width: 100%;
  /* width: 440rpx; */
  overflow: hidden;
  margin-top: 20rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.pro_spec .pro_price {
  font-family: 'DIN';
  width: 280rpx;
  display: flex;
  align-items: center;
}

.pro_price .peo_nowprice {
  color: #ff8d97;
  font-size: 30rpx;
  font-weight: bold;
}

.pro_price .pro_integral {
  font-size: 30rpx;
  font-weight: bold;
  color: #ff8d97;
  /* font-weight: bold; */
}

.pro_price .pro_inter_img {
  display: flex;
  align-items: flex-end;
  /* margin-right: 6rpx; */
}

.pro_price .pro_inter_img .iconfont {
  font-size: 26rpx;
  display: inline-flex;
  color: #ff8d97;
  font-weight: bold;
}

.pro_price .pro_orig {
  font-size: 22rpx;
  color: #7c7c7c;
  text-decoration: line-through;
}

.pro_spec .pro_icon {
  margin-right: 4rpx;
  display: flex;
}

.pro_icon image {
  width: 50rpx;
  height: 46rpx;
}

.pro_icon button {
  width: 170rpx;
  height: 52rpx;
  background: #ff8d97;
  color: #fff;
  font-size: 26rpx;
  padding: 0rpx 20rpx;
  line-height: 52rpx;
  border-radius: 50rpx;
}

.order-foot {
  height: 84rpx;
  line-height: 84rpx;
  /* background: #fff; */
  text-align: center;
  margin-top: -20rpx;
}

.order-foot text {
  font-size: 23.97rpx;
  color: #bebebe;
}

.coll_list_null {
  text-align: center;
  font-size: 30rpx;
  /* font-weight: bold; */
  padding: 20rpx 0;
  color: #999;
}

/* 空白的块，解决底部导航占领高度 */

.null_height {
  height: 168rpx;
}
