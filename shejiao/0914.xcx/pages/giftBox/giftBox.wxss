} */
.gift_body_pri .pri_num .mark_pri{
  font-size: 22rpx;
  color:#c1c1c1;
  text-decoration:line-through;
}
.gift_body_pri .iconfont{
  font-size: 32rpx;
  display: inline-flex;
  align-items: center;
}
 .limit_num{
  font-size: 20rpx;
  color:#999;
}
.gift_buy{
  display: flex;
  justify-content:space-between;
  align-items: center;
  padding-top: 21rpx;
}
.gift_buy .right_buy{
  width: 110rpx;
  height: 36rpx;
  color: #fff;
  font-size: 20rpx;
  text-align: center;
  line-height: 36rpx;
  border-radius: 18rpx;
}
.gift_buy .car_img{
  width: 39rpx;
  height: 37rpx;
}