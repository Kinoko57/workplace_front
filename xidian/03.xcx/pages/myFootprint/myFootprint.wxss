/* pages/myFootprint/myFootprint.wxss */
@import '../../components/calendar/index.wxss';
page{
  background: #f6f6f6;
}
.my_footprint {
  /* font-family: SimHei; *//* background: #f2f2f2; */
  overflow-x: hidden;
}

.foot_header {
  text-align: center;
  background: #ebebeb;
  width: 100%;
  height: 86rpx;
  line-height: 86rpx;
  display: flex;
  justify-content: space-between;
  position: fixed;
  top: 0;
  z-index: 100;
}

.foot_header text {
  padding-left: 26rpx;
  color: #515151;
  font-size: 24rpx;
}

.foot_header .foot_num {
  color: #0d8d37;
  font-size: 26rpx;
  padding-left: 0;
}

.foot_header .foot_edit {
  float: right;
  padding-right: 26rpx;
  color: #0d8d37;
  font-size: 24rpx;
}

.foot_body {
  height: 100%;
  /* padding-top: 86rpx; */
}

.top {
  padding-top: 0;
}

.foot_body  .foot_date {
  padding: 0 10rpx;
  /* background: #f8f8f8; */
  background: #fff;
  position: relative;
  /* overflow: hidden; */
  margin-bottom: 30rpx;
  border-bottom: 2rpx solid #efefef;
  /* height: 414rpx; 原始高度 */
}

/* .foot_body  .foot_date_hidden {
  padding: 0 10rpx;
  background: #f8f8f8;
  position: relative;
  overflow: hidden;
  height: 170rpx;
} */
.foot_date .down_open{
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background: #fff;
  box-shadow: 2rpx 2rpx 4rpx 0px rgba(9, 2, 4, 0.15);
  position: absolute;
  right: 20rpx;
  bottom: -30rpx;
}
.foot_date .down_more  icon {
transform: rotate(90deg);

}

.foot_date .down_more_down icon {
transform: rotate(270deg);
}

.foot_date icon {
  color: #cecece;
  display: inline-flex;
  align-items: center;
  background: #fff;
  font-size: 36rpx;
}

.foot_list {
  /* padding-top: 32rpx; */
}

.foot_list .foot_pro_block .chose_date {
  font-size: 28rpx;
  margin-left: 26rpx;
  font-family: 'DIN';
  padding: 10rpx 0;
}
.foot_list .foot_pro_block .show{
  color: #686868;
}
.foot_list .foot_pro_block .hidden{
  color: transparent;
}

.foot_list .foot_pro_block{
  float: left;
  width: 244rpx;
  margin-right: 8rpx;
  margin-bottom: 6rpx;
}
.foot_list .clear{
  overflow: hidden;
  clear: both;
}
.foot_list .hide_right {
  margin-right: 0;
}
/* 订单商品信息 */

.foot_list .foot_pro {
  background: #fff;
  position: relative;
}

.foot_pro .pro_chose {
  /* float: left;
  display: flex;
  align-items: center;
  height: 262rpx;
  margin-left: 16rpx; */
  position: absolute;
  right: -2rpx;
  top: 0;
  z-index: 90;
}

.foot_pro .pro_img {
  /* margin-top: 40rpx; */
  position: relative;
}

.pro_img image {
  width: 244rpx;
  height: 244rpx;
}

.pro_img .pro_tips {
  width: 244rpx;
  height: 52rpx;
  background: rgba(0, 0, 0, 0.6);
  line-height: 52rpx;
  text-align: center;
  position: absolute;
  bottom: 0;
}

.pro_tips text {
  color: #fff;
  font-size: 24rpx;
}

.foot_pro .pro_info {
  /* float: left; */
  width: 100%;
  background: #fff;
  padding: 10rpx 0;
}

.pro_info .pro_title {
  /* width: 100%;
  max-width: 490rpx; */
  font-size: 24rpx;
  color: #444;
  /* margin-top: 50rpx; */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.pro_title image {
  width: 68rpx;
  height: 24rpx;
}

.pro_title  .pro_level {
  width: 68rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  position: relative;
  height: 24rpx;
}

.pro_title  .pro_level text {
  font-size: 16rpx;
  color: #fefefe;
  position: absolute;
  left: 46%;
  top: 50%;
  transform: translate(-50%, -50%);
  white-space: nowrap;
}

.pro_level text {
  color: #fff;
}

.pro_info .pro_spec {
  /* width: 490rpx; */
  overflow: hidden;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.pro_spec .pro_price {
  font-family: 'DIN';
  width: 280rpx;
  display: flex;
  align-items: center;
}

.pro_price .peo_nowprice {
  color: #e33b16;
  font-size: 26rpx;
}

.pro_price .pro_integral {
  font-size: 30rpx;
  font-weight: bold;
  color: #e33b16;
  /* font-weight: bold; *//* margin-left: 8rpx; */
}

.pro_price .pro_inter_img {
  display: flex;
  align-items: flex-end;
  /* margin-left: 9rpx; *//* margin-right: 30rpx; */
}

.pro_price .pro_inter_img .iconfont {
  font-size: 26rpx;
  font-weight: bold;
  display: inline-flex;
  color: #0d8d37;
}

.pro_price .pro_orig {
  font-size: 22rpx;
  color: #7c7c7c;
  text-decoration: line-through;
}

.pro_spec .pro_icon {
  margin-right: 4rpx;
  display: flex;
}
.pro_spec .pro_icon .iconfont{
  color: #cdcdcd;
}

.pro_icon image {
  width: 50rpx;
  height: 46rpx;
}

.pro_icon button {
  width: 170rpx;
  height: 52rpx;
  background: #0d8d37;
  color: #fff;
  font-size: 26rpx;
  padding: 0rpx 20rpx;
  line-height: 52rpx;
  border-radius: 50rpx;
}

.order-foot {
  height: 84rpx;
  line-height: 84rpx;
  /* background: #fff; */
  text-align: center;
}

.order-foot text {
  font-size: 23.97rpx;
  color: #bebebe;
}

.foot_list_null {
  text-align: center;
  font-size: 30rpx;
  /* font-weight: bold; */
  padding:80rpx 0;
  color: #999;
}
.foot_list_null image{
  display: inline-block;
  width: 750rpx;
  height: 357rpx;
}

.foot_edit_more {
  box-shadow: 0 8rpx 20rpx 10rpx #dadada;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #fff;
  z-index: 999;
}
.editDel_null {
  height: 100rpx;
}

.editDel_null_iphoneX {
  height: 168rpx;
}
.editDel_iphonex {
  padding-bottom: 68rpx;
}

.foot_edit_more .allCheck {
  margin-left: 26rpx;
  font-size: 26rpx;
  color: #555;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.foot_edit_more .del_btn {
  float: right;
  width: 210rpx;
  height: 100rpx;
  background: #0d8d37;
  color: #fff;
  font-size: 34rpx;
  line-height: 100rpx;
  border-radius: 0;
  margin: 0;
}
.foot_edit_more .del_btn button {
  width: 100%;
  margin: 0;
  padding: 0;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 0;
  color: #fff;
  font-size: 30rpx;
  font-weight: normal;
}

.foot_edit_more .del_btn .disbale_btn {
  background: rgba(225, 56, 22, 0.5);
}

checkbox .wx-checkbox-input {
  border-radius: 50%;
  width: 34rpx;
  height: 34rpx;
  /* border: 1px solid #d8d8d8;
  background: #484848; */
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border: 1px solid transparent;
  background: #0d8d37;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 50%;
  width: 34rpx;
  height: 34rpx;
  line-height: 34rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}
