.member {
  position: relative;
  background: #f2f2f2;
  overflow-x: hidden;
  /* height:100vh; */
}

.m_header {
  height: 200rpx;
  width: 702rpx;
  position: relative;
  z-index: 20;
  /* top: 28rpx; */
  padding: 0 26rpx;
  background: #ff8d97;
}

/* 头部会员信息 */

.m_info {
  padding-top: 36rpx;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
}

.m_info .m_avatar {
  width: 122rpx;
  height: 122rpx;
  margin-right: 50rpx;
}

.m_info .login_btn {
  margin: 0;
  padding: 0;
  background: transparent;
}

.m_info .login_btn::after {
  border: none;
}

.m_info text {
  font-size: 40rpx;
  color: #fff;
  margin-right: 30rpx;
  /* background: transparent */
}

/* 登陆成功后的会员信息 */

.m_info_login {
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  /* align-items: flex-end; */
  height: 200rpx;
  justify-content: space-between;
  padding-right: 24rpx;
}

.m_info_login .m_avatar {
  width: 122rpx;
  height: 122rpx;
  margin-right: 24rpx;
  margin-bottom: 12rpx;
  border-radius: 50%;
}

.m_info_login .m_info_title {
  /* width: 260rpx; *//* margin-right: 140rpx; */
  width: 400rpx;
  /* display: inline-flex; */
}

.m_info_login .m_info_title .m_info_name {
  font-size: 30rpx;
  font-weight: bold;
  color: #fff;
  /* display: block; */
  margin-left: 14rpx;
}

.m_info_login .m_info_title .m_info_level {
  display: flex;
  justify-content: flex-start;
}

.m_info_login .m_info_title .m_info_level text {
  font-size: 30rpx;
  /* font-weight: bold; */
  color: #fff;
}

.m_info_login .m_info_title .m_info_level .iconfont {
  font-size: 40rpx;
  /* color: #f5cd19; */
  color: #ffe790;
  display: inline-flex;
}

.m_score {
  text-align: center;
}

.m_score .iconfont {
  font-size: 84rpx;
  color: #fff;
}

.m_score text {
  font-size: 60rpx;
  color: #fff;
  font-weight: bold;
  display: block;
}

.view_hidden {
  display: none;
}

/* 中间部分 */

.m_body {
}

.m_order {
  height: 260rpx;
  padding: 0 26rpx;
  padding-top: 24rpx;
  background: #fff;
}

.m_order_top {
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1px solid #e4e4e4;
}

.m_order .m_order_top text {
  color: #444;
  font-size: 32rpx;
}

.m_order_top .m_order_right {
  float: right;
  display: flex;
  align-items: center;
}

.m_order_top .m_order_right text {
  /* font-size: 20rpx;
  color: #c4c4c4; */
  font-size: 24rpx;
  color: #999;
}

.m_order_top .m_order_right icon {
  display: flex;
  align-items: center;
  color: #bebebe;
}

.m_order_more {
  text-align: center;
}

.m_order_more view {
  display: inline-block;
  text-align: center;
  /* margin: 30rpx 26rpx; */
  width: 20%;
  margin: 30rpx 0;
}

.m_order_more .more_icon {
  width: 58rpx;
  height: 48rpx;
}

.m_order_more text {
  display: block;
  font-size: 26rpx;
  color: #504448;
}

/* 消息数量定位 */

.has_msg {
  position: relative;
}

.has_msg .msg_bg {
  position: absolute;
  margin: 0;
  top: -10rpx;
  right: 30rpx;
  line-height: 30rpx;
  text-align: center;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background: #f43530;
}

.msg_bg_hidden {
  position: absolute;
  top: -14rpx;
  right: -2rpx;
  margin: 0;
  z-index: -1;
}

.has_msg .msg_bg text {
  font-size: 18rpx;
  color: #fff;
  font-weight: bold;
}
