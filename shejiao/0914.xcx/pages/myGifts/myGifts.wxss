/* pages/myGifts/myGifts.wxss */
page{
  background: #f9f9f9;
}
.gift_bg{

}
.gift_bg .gift_head{
  width: 100%;
  background: #fff;
  white-space: nowrap;
  position: fixed;
  z-index: 2;
  height: 90rpx;
  line-height: 90rpx;
}
.gift_bg .gift_head .head_block{
  width: 50%;
  display: inline-block;
  height: 90rpx;
  text-align: center;
  font-size:28rpx;
  font-weight:400;
  color:rgba(154,154,154,1);
}
.gift_bg .gift_head text{
  height: 86rpx;
  display: inline-block;
  border-bottom:4rpx solid #fff;
}
.gift_bg .gift_head .head_block_active{
  font-weight:400;
  color:rgba(255,0,0,1);
}
.gift_bg .gift_head .head_block_active text{
  border-bottom: 4rpx solid rgba(255,0,0,1);
}
/* 中奖列表 */
.gift_bg .gift_body{
  padding: 0 24rx;
  margin-top: 20rpx;
}
.gift_list{
  width: 702rpx;
  margin: 0 auto;
}
.gift_list .gift_list_block{
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 0 24rpx;
}

.gift_list .gift_list_block .gift_block_top{
  padding: 24rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size:26rpx;
  font-weight:bold;
  color:rgba(52,52,52,1);
  border-bottom: 2rpx solid rgba(239,239,239,1);
}

.gift_list .gift_list_block .gift_block_top .time{
  font-weight: 400;
}
.gift_list .gift_list_block .gift_block_top .status{
  font-size:23rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(255,0,0,1);
}
.gift_list .gift_block_bottom{
  min-height: 135rpx;
}
.gift_list .gift_block_bottom .red_package{
  height: 135rpx;
  line-height: 135rpx;
}
.gift_list .gift_block_bottom .red_package image{
  width: 46rpx;
  height: 52rpx;
  padding-left: 21rpx;
  padding-right: 42rpx;
}
.gift_list .gift_block_bottom .red_package .name{
  font-size:27rpx;
  font-weight:400;
  color:rgba(52,52,52,1);
}

.gift_list .gift_block_bottom .win_activity{

}
.gift_list .gift_block_bottom .win_activity .win_pro{
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  padding-bottom: 0;
}
.gift_list .gift_block_bottom .win_activity .win_pro .pro_img{
  width: 160rpx;
  height: 160rpx;
  margin-right: 35rpx;
}
.gift_list .gift_block_bottom .win_activity .win_pro .pro_img image{
  width: 100%;
  height: 100%;
}
.gift_list .gift_block_bottom .win_activity .win_pro .pro_info{
  width: 440rpx;
  font-size:27rpx;
  font-weight:400;
  color:rgba(52,52,52,1);
}
.gift_list .gift_block_bottom .win_activity .win_btn{
  display: flex;
  justify-content: flex-end;
  padding-bottom: 33rpx;
}
.gift_list .gift_block_bottom .win_activity .win_btn .btn{
  padding: 0 20rpx;
  height:56rpx;
  border: 2rpx solid rgba(255,0,0,1);
  font-size:23rpx;
  font-weight:400;
  color:rgba(255,0,0,1);
  text-align: center;
  line-height: 56rpx;
  border-radius: 50rpx;
  margin-left: 10rpx;
}
.gift_list .gift_block_bottom .win_activity .win_btn .disable_status{
  color: rgba(154,154,154,1);
  border-color: rgba(154,154,154,1);
}