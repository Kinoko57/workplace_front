/* pages/previewDetail/previewDetail.wxss */
page{
  background: #f9f9f9;
}
.image_bg{
  position: absolute;
  top: 0;
  overflow: hidden;
  height: 100vh;
  width: 750rpx;
}
.image_bg image{
  width: 750rpx;
  height: 100%;
  /* filter: blur(6rpx); */
}
.preView_body{
  position: relative;
  top: 0;
  width: 100%;
}
.view_fiexd_follow{
  position: absolute;
  left:35rpx;
  top: 20rpx;
  /* width:280rpx; */
  height:66rpx;
  display: flex;
  align-items: center;
  border-radius: 33rpx;
  background:rgba(0,0,0,0.24);
}
.view_fiexd_follow .follow_image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin:0 6rpx
}
.view_fiexd_follow .follow_name{
  color: #fff;
  max-width: 200rpx;
  padding: 0 20rpx 0 10rpx;
}
.view_fiexd_follow .follow_name text:nth-child(1){
  text-overflow: ellipsis;
  display: block;
  max-width: 180rpx;
  font-size: 20rpx;
  display: block;
  white-space: nowrap;
  overflow: hidden;
}
.view_fiexd_follow .follow_name text:nth-child(2){
  font-size: 18rpx;
  display: block;
}
.view_fiexd_follow .folow_btn{
  height: 50rpx;
  background-color: #fff;
  font-size: 22rpx;
  line-height: 50rpx;
  padding: 0 10rpx;
  border-radius: 25rpx;
  color: #FF0000;
} 

.view_fiexd_center{
  position: absolute;
  width: 100%;
  top: 58%;
  left: 50%;
  color: #fff;
  text-align: center;
  transform: translate(-50%,-50%);
}
.view_fiexd_center_image{
  width: 500rpx;
  margin: 0 auto;
  margin-bottom: 40rpx;
}
.view_fiexd_center_image image{
  width: 100%;
  height: 400rpx;
}
.view_fiexd_center_language{
  font-size: 44rpx;
  padding: 0 40rpx;
  font-weight: 600;
  text-align: center;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-all;
  white-space:normal;
}
.view_fiexd_center_anchor{
  font-size: 26rpx;
  padding: 15rpx 0 30rpx;
  color: #DEDEDE;
}
.view_fiexd_center_anchorTime{
  font-size: 40rpx;
  font-weight: 600;
}
.view_fiexd_center_btn{
  width: 250rpx;
  height: 104rpx;
  border-radius: 12rpx;
  line-height: 104rpx;
  margin: 38rpx auto 0;
  text-align: center;
}
.view_fiexd_center_follow{
  font-size: 22rpx;
  padding-top: 180rpx;
  color: #fff;
}
.view_fiexd_center_follow view{
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: inline-flex;
  margin-bottom: 15rpx;
  align-items: center;
  justify-content: center;
  background: rgba(0,0,0,0.24);
}
.view_fiexd_center_follow text{
  display: block;
}
.view_fiexd_center_follow view icon{
  display: flex;
}