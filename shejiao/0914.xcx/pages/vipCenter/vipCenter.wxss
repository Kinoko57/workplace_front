/* pages/vipCenter/vipCenter.wxss */
.vip_head{
 background: linear-gradient(to right, #e34c26, #e13816);
}
.vip_head_t{
 display: flex;
 padding: 10rpx 22rpx 0;
}
.vip_head_t .avater{
  width: 124rpx;
  height: 124rpx;
  border-radius: 50%;
  margin-top: 15rpx;
}
.vip_head_info{
  padding-left: 22rpx;
  width: 390rpx;
}
.vip_head_info .vip_name{
  color: #fff;
  font-size: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.vip_head_info .vip_lever{
  display: flex;
  color: #333;
  font-size: 22rpx;
  padding: 16rpx 0;
}
.vip_head_info .vip_lever text{
  display: inline-flex;
  padding: 6rpx 10rpx;
  background: #fff;
  margin-right: 18rpx;
}
.vip_head_info .vip_pro{
 position: relative;
 width: 224rpx;
 background: #fff;
 height: 8rpx;
 border-radius: 4rpx;
 overflow: hidden;
}
.vip_head_info .pro_color{
  background: #fff100;
  height: 8rpx;
  border-radius: 4rpx;
}
.vip_head_info .vip_mark{
  font-size: 18rpx;
  color: #fff;
  margin-top: 18rpx;
  margin-bottom: 36rpx;
}
.vip_head_wallet{
 margin-left: 68rpx;
 color: #fff;
 font-size: 26rpx;
}
.vip_head_wallet image{
  width:69rpx;
  height: 82rpx;
  margin: 28rpx 0 12rpx;
}
.vip_head_wallet .vip_money{
  width:69rpx;
  text-align: center; 
}