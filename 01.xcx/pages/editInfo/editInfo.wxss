}
.add_saveInfo_height{
height: 206rpx;
}
 .null {
  bottom: 80%;
}

.add_saveInfo button {
  width: 460rpx;
  height: 78rpx;
  line-height: 78rpx;
  border: none;
  background: #ff8d97;
  color: #fff;
  outline: none;
  font-size: 40rpx;
  border-radius: 20rpx;
  margin-top: 45rpx;
}

/* radio的默认样式 */

radio .wx-radio-input {
  border-radius: 4rpx;
  width: 34rpx;
  height: 34rpx;
  border: 1px solid #a1a1a1;
}

radio .wx-radio-input.wx-radio-input-checked {
  border: 1px solid transparent;
  background: #ff8d97;
}

radio .wx-radio-input.wx-radio-input-checked::before {
  border-radius: 4rpx;
  width: 34rpx;
  height: 34rpx;
  line-height: 34rpx;
  text-align: center;
  font-size: 30rpx;font-weight: bold;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}
