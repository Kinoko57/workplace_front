/* pages/my/my.wxss */

page {
  background: #f7f7f7
}

.my_bg {
  background: #f6f6f6;
}

.my_bg .my_top {
  position: relative;
  margin-bottom:130rpx;
}

.my_bg .my_top .my_info {
  height:250rpx;
  padding: 0 12rpx;
  position: relative;
}
.my_bg .my_top .my_info_tips{
  height: 300rpx;
}
.my_bg .my_top .my_info .info_left {
  padding-left: 16rpx;
  display: flex;
  padding-top: 32rpx;
}
.my_bg .my_top .my_info .info_left_top{
  padding-top: 55rpx;
}

.my_bg .my_top .my_info .info_left .info_user {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.my_bg .my_top .my_info .info_left .info_name {
  color: #fff;
  height: 108rpx;
  font-size: 36rpx;
  font-weight: bold;
  padding-top: 20rpx;
  line-height: 1.4;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  word-break: break-all;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  width: 400rpx;
}

.my_bg .my_top .my_info .info_right {
  position: absolute;
  right: 28rpx;
  top: 20rpx;
}

.my_bg .my_top .my_info .info_right .iconfont {
  font-size: 48rpx;
  color: #fff;
}
.my_bg .my_top .my_about {
  background: #fff;
  position: absolute;
  height: 158rpx;
  width: 710rpx;
  top: 200rpx;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.my_bg .my_top .my_about_tips{
  top:246rpx
}
.my_bg .my_top .my_about .about_pro {
  width: 220rpx;
  text-align: center;
}

.my_bg .my_top .my_about .about_pro text {
  display: block;
}

.my_bg .my_top .my_about .about_pro .num {
  font-size: 40rpx;
}

.my_bg .my_top .my_about .about_pro .title {
  font-size: 26rpx;
  margin-top: 10rpx;
  color: #999;
  padding-bottom: 10rpx;
}

.my_bg  .my_order {
  height: 238rpx;
  background: #fff;
  padding: 16rpx 12rpx;
  margin:0 24rpx 25rpx;
  border-radius: 20rpx;
}

.my_bg  .my_order .my_order_title {
  /* border-bottom: 2rpx solid #e0e0e0; */
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 10rpx;
  color: #333;
  font-size: 30rpx;
}

.my_bg  .my_order .my_order_title .order_more {
  color: #999;
  font-size: 26rpx;
}

.my_bg  .my_order .my_order_title .order_more .iconfont {
  font-size: 26rpx;
  font-weight: bold;
  display: inline-flex;
  align-items: center;
}

.my_bg  .my_order  .my_order_block {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top:28rpx;
  padding-bottom: 26rpx;
}

.my_bg  .my_order  .my_order_block view {
  width: 144rpx;
  text-align: center;
  position: relative;
}

.my_bg  .my_order  .my_order_block .order_num {
  width: 22rpx;
  height: 22rpx;
  line-height: 22rpx;
  /* background: #fff; */
  /* border: 2rpx solid #0d8d37; */
  border-radius: 50%;
  color: #fff;
  font-size: 18rpx;
  position: absolute;
  left: 66%;
  transform: translateX(-50%);
  top: -10rpx;
  text-align: center;
  padding: 3rpx;
}

.my_bg  .my_order  .my_order_block .order_img {
  width:46rpx;
  height:46rpx;
}

.my_bg  .my_order  .my_order_block .order_text {
  color: #666;
  font-size: 24rpx;
  display: block;
  margin-top: 14rpx;
}

.my_bg  .my_use {
  background: #fff;
  padding:16rpx 12rpx;
  margin:0 24rpx 20rpx;
  border-radius: 20rpx;
}

.my_bg  .my_use .my_use_title {
  /* border-bottom: 2rpx solid #e0e0e0; */
  display: flex;
  align-items: center;
  padding: 20rpx 10rpx;
  color: #333;
  font-size: 30rpx;
}

.my_bg .my_use_block {
  padding-top:30rpx;
}
.my_use_block_list{
  position: relative;
}

