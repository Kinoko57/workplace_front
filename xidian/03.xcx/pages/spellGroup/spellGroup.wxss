/* pages/spellGroup/spellGroup.wxss */
page{
  background: #f7f7f7
}
.group_body{
  padding: 0 24rpx;
}
.group_prolist .group_block {
  padding: 30rpx 24rpx;
  background: #fff;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
}
.group_prolist .group_block .group_banner{
  position: relative;
}

.group_prolist .group_block .group_banner image{
  width: 652rpx;
  height: 230rpx;
  display: block;
  position: relative;
}
.group_prolist .group_block .group_banner  .group_banner_fixed{
  position: absolute;
  top: 0;
  right: 22rpx;
  background: #ffb519;
  color: #fff;
  font-size: 22rpx;
  height: 52rpx;
  line-height: 52rpx;
  width: 334rpx;
  text-align: center;
  border-radius: 0 0 6rpx 6rpx;
}
.group_prolist .group_block .group_name{
  padding: 20rpx 0;
  /* display: flex;
  align-items: center; */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.group_prolist .group_block .group_name text{
  font-size: 28rpx;
  color: #333333;
}
.group_prolist .group_block .group_name text:nth-child(2){
  /* width: 556rpx; */
}
.group_prolist .group_block .group_name .group_name_text{
  display: inline-flex;
  align-items: center;
  padding: 0 10rpx;
  height: 38rpx;
  border-radius: 10rpx;
  color: #fff;
  font-size: 18rpx;
  margin-right: 15rpx;
}
.group_prolist .group_block .group_year{
  font-size: 22rpx;
  color: #999999;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.group_year_l{
  width: 500rpx;
}
.group_year_r{
  width: 180rpx;
  text-align: right;
}
.group_year_l text{
  display: inline-block;
  border: 1px solid #999;
  height: 36rpx;
  padding: 0 6rpx;
  border-radius: 10rpx;
  line-height:36rpx;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
}
.group_prolist .group_block .group_pri{
  padding:30rpx 0 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.group_prolist .group_block .group_pri .other_left{
  color: #ff0000;
  font-size: 48rpx;
  display: flex;
  align-items: center;
}
.group_prolist .group_block .group_pri .other_left .mode_style{
   font-size: 24rpx;
}
.group_prolist .group_block .group_pri .other_left .pro_dis_num{
  height: 40rpx;
  line-height: 40rpx;
  color: #ffb519;
  font-size: 22rpx;
  background: #fff3da;
  padding: 0 10rpx;
  margin-left: 16rpx;
  display: inline-block;
}
.group_prolist .group_block .group_pri .other_left .radius_text{
  border-radius: 4rpx;
  padding: 0 8rpx;
}
.group_prolist .group_block .group_pri .pro_dis_num{
  color: #999999;
  font-size: 22rpx;
}
.group_prolist .group_block .group_pri .pro_btn{

}
.group_prolist .group_block .group_pri .pro_btn view{
  color: #fff;
  font-size: 24rpx;
  height: 52rpx;
  line-height: 52rpx;
  padding: 0 26rpx;
  text-align: center;
  border-radius: 26rpx;
}