.coll_body .article_lists .article_block .article_like{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  color: #999999;
  font-size: 20rpx;
  padding-bottom: 10rpx;
}
.coll_body .article_lists .article_block .article_like .like .iconfont{
  font-size: 24rpx;
  display: inline-flex;
  margin-right: 4rpx;
}
