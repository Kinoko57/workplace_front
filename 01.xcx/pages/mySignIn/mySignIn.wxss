/* pages/mySignIn/mySignIn.wxss */
@import '../mySignIn/rili.wxss';

.sign_in {
  /* font-family: SimHei; */
  position: relative;
  background: #f2f2f2;
}

.sign_body {
}

.sign_body .sign_banner {
  height: 415rpx;
  width: 100%;
  position: relative;
}

.sign_banner image {
  height: 415rpx;
  width: 100%;
  position: absolute;
}

.sign_banner .banner_left {
  position: absolute;
  /* width: 123rpx; */
  left: 112rpx;
  top: 135rpx;
  text-align: center;
  width: 150rpx;
}

.sign_banner .banner_left text {
  display: block;
  color: #ff8d97;
}

.banner_right {
  position: absolute;
  /* width: 250rpx; */
  top: 76rpx;
  /* right: 140rpx; */
  left:50%;

}

.banner_right .banner_score {
  font-size: 50rpx;
  color: #fff;
  font-family: 'DIN';
  margin: 10rpx 0;
}

.banner_score .iconfont {
  font-size: 44rpx;
  color: #ffe790;
}

.banner_right .btn {
  width: 222rpx;
  height: 54rpx;
  border: 2rpx solid #fff;
  border-radius: 50rpx;
  background: transparent;
  color: #fff;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn icon {
  line-height: 100rpx;
}

.sign_date {
  background: #fff;
}

.sign_info {
  background: #fff;
  padding: 0 26rpx;
}

.sign_info .info_title {
  height: 125rpx;
  position: relative;
}

.info_title view {
  width: 100%;
  height: 2rpx;
  background: #dadada;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  z-index: 5;
}

.info_title text {
  font-size: 30rpx;
  color: #555;
  width: 133rpx;
  height: 36rpx;
  text-align: center;
  background: #fff;
  display: block;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 10;
}

.info_more {
  font-size: 22rpx;
  color: #b0b0b0;
  padding-bottom: 68rpx;
}

.info_more text {
  color: #555;
}
