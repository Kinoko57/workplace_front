/* pages/myCollection/myCollection.wxss */

page {
  background: #f6f6f6;
}

.my_collection {
  font-family: SimHei;
  background: #f6f6f6;
  overflow-x: hidden;
}
.tab_coll_header{
  text-align: center;
  background: #fff;
  height: 86rpx;
  line-height: 86rpx;
  display: flex;
  justify-content: center;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 100;
  color: #333;
}
.tab_coll_header .tab_block{
  width: 50%;
  /* margin: 0 5%; */
  text-align: center;
}
.tab_coll_header text{
  font-size: 30rpx;
  line-height: 78rpx;
  display: inline-block;
  padding: 0 10rpx;
  
}
.tab_coll_header .active{
  border-bottom: 4rpx solid #0d8d37;
}
.coll_header {
  text-align: center;
  background: #ebebeb;
  height: 86rpx;
  line-height: 86rpx;
  display: flex;
  justify-content: space-between;
  position: fixed;
  top: 86rpx;
  width: 100%;
  z-index: 100;
}

.coll_header_null {
  height: 86rpx;
}

.coll_header text {
  padding-left: 26rpx;
  color: #515151;
  font-size: 24rpx;
}

.coll_header .coll_num {
  color: #0d8d37;
  font-size: 26rpx;
  padding-left: 0;
}

.coll_header .right {
  display: inline-flex;
  align-items: center;
}

.coll_header .right .coll_edit {
  padding-right: 26rpx;
  color: #0d8d37;
  font-size: 24rpx;
}

.coll_header .right .line {
  width: 2rpx;
  height: 30rpx;
  border-right: 2rpx solid #888;
}

.coll_header .right .iconfont {
  padding: 0 26rpx;
  font-size: 36rpx;
}

.coll_body .article_lists{
  /* display: flex; */
  /* align-items: center; */
  /* justify-content: space-between; */
  padding: 0 20rpx;
  margin-top: 20rpx;
  overflow: hidden;
}
.coll_body .article_lists .article_block_left{
  float: left;
}
.coll_body .article_lists .article_block_right{
  float: right;
}
.coll_body .article_lists .article_block{
  background: #fff;
  width: 346rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  padding-bottom: 16rpx;
}
.coll_body .article_lists .article_block .article_img{
  margin-bottom: 10rpx;
}
.coll_body .article_lists .article_block .article_img image{
  width: 346rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  height: 200rpx;
}
.coll_body .article_lists .article_block .article_title{
  color: #333333;
  font-size: 24rpx;
  padding: 0 20rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  word-break: break-all;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.5;
}
.coll_body .article_lists .article_block .article_price{
  color: #e13816;
  font-size: 28rpx;
  font-weight: bold;
  padding: 0 20rpx;
  line-height: 1.5;
  padding-bottom: 10rpx;
}
