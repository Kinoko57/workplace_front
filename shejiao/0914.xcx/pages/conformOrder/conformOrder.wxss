page{
  background: #f6f6f6;
}
.pub_lcolor{
  font-size: 24rpx;
  color: #666;
}
.pub_rcolor{
  font-size: 24rpx;
   color: #999;
}
.or_top{
  color: #fff;
  padding: 30rpx 0;
  font-size: 34rpx;
}
.or_top_status{
  padding-left: 30rpx;
  font-size: 34rpx;
}
.or_top_pay{
  padding-left: 30rpx;
  font-size: 28rpx;
  padding-top: 20rpx;
}
.flash_chose_info{
  position: relative;
}
.flash_chose_info .flash_sure_addr {
  display: flex;
  justify-content: space-between;
  align-items: center;
  min-height: 110rpx;
  padding: 12rpx 30rpx;
  background: #fff;
}
.flash_sure_addr .flash_sure_addr_info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}
.flash_sure_addr_l{
  font-size: 24rpx;
  color: #888;
  font-family: 'DIN';
  display: flex;
  align-items: center;
}
.flash_sure_addr_info .icon-address{
  display: inline-flex;
  align-items: center;
  font-size: 40rpx;

}
.info_block{
  display: flex;
  font-size: 26rpx;
  align-items: center;
}
.flash_sure_addr_info view .add_name {
  width: 320rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #666;
}
.flash_chose_info image {
  position: absolute;
  width: 100%;
  height: 8rpx;
  bottom: 0;
}
.add_address{
  display: flex;
  align-items: center;
  color: #666;
  padding-top: 10rpx;
}
.info_add_name{
  width: 146rpx;
  color: #888;
}
.add_phone{
  font-size: 24rpx;
  padding-left: 15rpx;
  color: #666;
}
.info_add_cont{
  font-size: 26rpx;
}
.back_home_btn{
  width: 160rpx;
  text-align: center;
  height: 80rpx;
  border:1px solid #f2362c;
  border-radius: 40rpx;
}
.back_home_btn button{
  width: 160rpx;
  height: 100%;
  padding:0;
  margin:0
}
.conform_banner{
  padding-top: 2rpx;
  margin-bottom: 22rpx;
}
.conform_btn{
  display: flex;
  align-items: center;
  margin:80rpx 0;
  justify-content: center;
}
.conform_btn view{
  width:200rpx !important;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background: #f6f6f6;
  border-radius:80rpx ;
  border:1px solid #f2362c;
  padding: 0;
  font-size: 30rpx;
  margin: 0 30rpx;
  font-weight:normal
