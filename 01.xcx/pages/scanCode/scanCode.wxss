/* pages/scanCode/scanCode.wxss */

page {
  background: #fff;
}

.scan {
  /* font-family: SimHei; */
  /* background: #f2f2f2; */
  overflow-x: hidden;
}

.scan_body {
  /* padding-top: 22rpx; */
  margin-bottom: 100rpx;
  background: #fff;
}

.scan_body .scan_img {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0;
}

.scan_body swiper {
  height: 750rpx;
  background: #fff;
  text-align: center;
}

swiper image {
  width: 750rpx;
  height: 750rpx;
}

.pro_info {
  padding: 40rpx 26rpx;
  background: #fff;
  /* padding-bottom: 38rpx; */
}

.pro_info .pro_price {
  font-size: 52rpx;
  color: #ff8d97;
  font-family: 'DIN';
}

.pro_info .pro_name {
  font-size: 38rpx;
  color: #393939;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.pro_info .pro_code {
  font-size: 28rpx;
  color: #7e7e7e;
  font-family: 'DIN';
}

.pro_info .pro_desc {
  font-size: 28rpx;
  color: #7f7f7f;
}

.pro_tips {
  height: 126rpx;
  text-align: center;
  font-size: 28rpx;
  color: #393939;
  background: #fff;
}

.pro_tips text {
  font-size: 54rpx;
  color: #ff8d97;
  font-family: 'DIN';
  display: block;
}

.pro_tips_reset {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;font-weight: bold;
  color: #393939;
  background: #fff;
  padding-bottom: 30rpx;
  font-weight:bold;

}

.pro_tips_reset text {
  font-size: 54rpx;
  color: #ff8d97;
  font-family: 'DIN';
  display: block;
}

.pro_tips_win {
  height: 100rpx;
  background: #fff;
}

.scan_foot_wx {
  background: #fff;
  text-align: center;
  padding-top: 38rpx;
}

.scan_foot_wx text {
  color: #7f7f7f;
  font-size: 30rpx;font-weight: bold;
  display: block;
  padding-bottom: 38rpx;
}

.scan_foot_wx button {
  background: #ff8d97;
  color: #fff;
  font-size: 40rpx;
  line-height: 100rpx;
  border-radius: 0;
}

.scan_foot_wx button::after {
  border: none;
}

.scan_foot_app {
  height: 133rpx;
  background: #fff;
  text-align: center;
  padding-top: 30rpx;
}

.scan_foot_app button {
  width: 460rpx;
  background: #ff8d97;
  color: #fff;
  font-size: 40rpx;
  line-height: 80rpx;
}

.scan_foot_app button::after {
  border: none;
}

.scan_foot_win {
  /* background: #fff; *//* text-align: center; *//* margin-top: 38rpx; */
  position: fixed;
  width: 100%;
  bottom: 0;
  height: 100rpx;
}
.scan_foot_win_height{
  height: 168rpx;
  background: #fff;
}
.scan_foot_win button {
  background: #ff8a00;
  color: #fff;
  font-size: 34rpx;
  line-height: 100rpx;
  border-radius: 0;
  width: 50%;
}

.scan_foot_win .go-Index {
  background: #ff8d97;
}

.scan_foot_win button::after {
  border: none;
}

.scan_win_bg {
  position: fixed;
  background: rgba(0, 0, 0, 0.4);
  width: 100%;
  height: 100%;
  top: 0;
  z-index: 50;
}

.scan_win {
  position: fixed;
  top: 94rpx;
  z-index: 60;
  left: 50%;
  transform: translateX(-50%);
}

.scan_win image {
  width: 700rpx;
  height: 804rpx;
}

.scan_win icon {
  position: absolute;
  color: #ffea00;
  top: 150rpx;
  font-size: 50rpx;
  right: 50rpx;
}

.scan_win .win_price {
  font-size: 80rpx;
  position: absolute;
  color: #ea2202;
  left: 50%;
  transform: translateX(-50%);
  top: 425rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 330rpx;
}

.win_price .win_price_num {
  font-size: 80rpx;
  font-family: 'DIN';
}

.win_price .win_price_name {
  font-size: 30rpx;font-weight: bold;
  font-family: 'DIN';
}

.scan_win .win_price {
  position: absolute;
  color: #ea2202;
  text-align: center;
}

.win_tips {
  position: absolute;
  color: #fff;
  font-size: 30rpx;font-weight: bold;
  left: 50%;
  top: 580rpx;
  transform: translate(-50%);
  width: 540rpx;
  display: inline-block;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.win_text {
  position: absolute;
  color: #fffd00;
  font-size: 48rpx;
  left: 50%;
  transform: translateX(-50%);
  top: 650rpx;
}

.win_text image {
  width: 225rpx;
  height: 56rpx;
}

