/* pages/flashSale/flashSale.wxss */

.spike_bg {
  height: 100%;
}

page {
  background: #f9f9f9;
}

.spike_body {
  padding: 0 24rpx;
  /* background: #f6f6f6; */
}

.spike_body .spike_body_time {
  height: 144rpx;
  display: flex;
  width: 100%;
}
.spike_body .spike_body_time .spike_hot{
  display: inline-block;
  padding-top: 36rpx;
  width: 77rpx;
  height: 75rpx;
  margin-right: 10rpx;
}
.spike_body .spike_body_time .spike_timelist {
  /* height: 120rpx; */
  width:614rpx;
  height: 144rpx;
  white-space: nowrap;
}

.spike_body .spike_body_time .spike_timelist .spike_time_block {
  display: inline-block;
  width: 130rpx;
  height: 120rpx;
  text-align: center;
  position: relative;
  color: #333;
}

.spike_body .spike_body_time .spike_timelist .spike_time_block .time {
  font-weight: 600;
  font-size: 33rpx;
  padding-top: 30rpx;
  text-align: center;
}

.spike_body .spike_body_time .spike_timelist .spike_time_block .tips {
  font-size: 22rpx;
  height: 36rpx;
  line-height: 36rpx;
  display: inline-block;
  color: #949AA6;
}

.spike_body .spike_body_time .spike_timelist .spike_time_block .line {
  position: absolute;
  width: 4rpx;
  height: 104rpx;
  right: -4rpx;
  top: 50%;
  transform: translateY(-50%);
}

.spike_body .spike_body_time .spike_timelist .time_block_active {
  /* width: 190rpx; */
  /* background: #e13816;
  box-shadow: 3px 4px 14.4px 0.6px rgba(239, 60, 20, 0.26);
  text-shadow: 3px 4px 14.4px rgba(239, 60, 20, 0.26); */
}

.spike_body .spike_body_time .spike_timelist .time_block_active .tips {
  background: linear-gradient(90deg,rgba(220,0,0,1),rgba(255,156,156,1));
  border-radius: 18rpx;
  padding: 0 10rpx;
  display: inline-block;
  color: #fff;
}

.spike_body .spike_body_time .spike_timelist .time_block_active .line {
  display: none;
}

.spike_body .spike_body_time .spike_timelist .time_block_active .triangle {
  position: absolute;
  bottom: -12rpx;
  width: 190rpx;
  height: 13rpx;
  left: 0;
}

/* 促销列表 */

.spike_body .spike_prolist .activity_block {
  width: 662rpx;
  padding: 20rpx;
  /* width: 100%; */
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.spike_body .spike_prolist .activity_block  .act_pro{
  display: flex;
  align-items: center;
}
.spike_body .spike_prolist .activity_block  .act_pro .act_pro_left{
  position: relative;
}
.spike_body .spike_prolist .activity_block  .act_pro .act_pro_left .pro_icon{
  position: absolute;
  width: 80rpx;
  height: 80rpx;
}
.spike_body .spike_prolist .activity_block  .act_pro .act_pro_left .pro_icon_left_top{
  top: 0;
  left: 0;
}
.spike_body .spike_prolist .activity_block  .act_pro .act_pro_left .pro_icon_right_top{
  top: 0;
  left: 0;
}
.spike_body .spike_prolist .activity_block  .act_pro .act_pro_left .pro_icon_left_bottom{
  top: 0;
  left: 0;
}
.spike_body .spike_prolist .activity_block  .act_pro .act_pro_left .pro_icon_right_bottom{
  top: 0;
  left: 0;
}
.spike_body .spike_prolist .activity_block  .act_pro .act_pro_left .pro_main_image {
  height: 256rpx;
  width: 256rpx;
}
.spike_body .spike_prolist .activity_block  .act_pro .act_pro_left .pro_min_frame{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.spike_body .spike_prolist .activity_block  .act_pro .act_pro_right {
  margin-left: 18rpx;
  width: 387rpx;
}

.spike_body .spike_prolist .activity_block  .act_pro .act_pro_right .act_pro_name {
  color: #333;
  font-size: 26rpx;
  width: 380rpx;
  word-break: break-all;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  line-height: 1.5;
}

.spike_body .spike_prolist .activity_block  .act_pro .act_pro_right .act_pro_name .pro_tag_style {
  height: 27rpx;
  color: #fff;
  padding: 0 4rpx;
  font-size: 20rpx;
  margin-right: 16rpx;
}

.spike_body .spike_prolist .activity_block  .act_pro .act_pro_right .act_pro_name .tab_bg_1 {
  background: linear-gradient(to right, #10b9ea, #46e4a5);
}

.spike_body .spike_prolist .activity_block  .act_pro .act_pro_right .act_pro_name .tab_bg_2 {
  background: linear-gradient(to right, #ff9b05, #fe6702);
}

.spike_body .spike_prolist .activity_block  .act_pro .act_pro_right .act_pro_tips {
  margin-bottom: 10rpx;
  width: 380rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #e13816;
  font-size: 24rpx;
  padding-top: 10rpx;
}


.spike_body .spike_prolist .activity_block  .act_pro .act_pro_right .act_pro_progress {
  width:280rpx;
  background: #FFECE8;
  border-radius: 50rpx;
  height: 28rpx;
  position: relative;
  overflow:hidden;
  margin-top: 20rpx;
}

.spike_body .spike_prolist .activity_block  .act_pro .act_pro_right .act_pro_progress .whole_num {
  color: #e13816;
  font-size: 20rpx;
  position: absolute;
  right: 16rpx;
  top: 50%;
  transform: translateY(-50%);
}

.spike_body .spike_prolist .activity_block  .act_pro .act_pro_right .act_pro_progress .sale_progress {
  position: absolute;
  left: 0;
  top: 0;
  height: 28rpx;
  /* background: linear-gradient(to right, #e84929, #f97f33); */
  border-radius: 50rpx;
}

.spike_body .spike_prolist .activity_block  .act_pro .act_pro_right .act_pro_progress .sale_progress .sale_num {
  color: #fff;
  font-size: 18rpx;
  position: absolute;
  left: 10rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 200rpx;
}
.spike_body .spike_prolist .activity_block  .act_pro .act_pro_right .act_pro_tips {
  margin-bottom: 10rpx;
}

.spike_body .spike_prolist .activity_block  .act_pro .act_pro_right .act_pro_tips text {
  font-size: 20rpx;
  height: 30rpx;
  line-height: 30rpx;
  display: inline-block;
  border-radius: 4rpx;
  padding: 0 4rpx;
  margin-right:8rpx;
}
.spike_body .spike_prolist .activity_block  .act_pro .act_pro_right .act_pro_tips text:last-child{
  margin-right:0;
}
.spike_body .spike_prolist .activity_block  .act_pro .act_pro_right .act_pro_price {
  display: inline-flex;
  align-items: center;
  font-size: 22rpx;
  padding-top: 0;
  color: #c1c1c1;
  justify-content: space-between;
  width: 100%;
}
.spike_body .spike_prolist .activity_block  .act_pro .act_pro_right .act_pro_price .pro_price .sale_price {
  color: #e13816;
  font-size: 24rpx;
  margin-right: 6rpx;
  font-weight: bold;
}

.spike_body .spike_prolist .activity_block  .act_pro .act_pro_right .act_pro_price .pro_price .sale_price .sale {
  font-size: 40rpx;
  font-weight: bold;
}

.spike_body .spike_prolist .activity_block  .act_pro .act_pro_right .act_pro_price .pro_price .market_price {
  text-decoration: line-through;
}

.spike_body .spike_prolist .activity_block  .act_pro .act_pro_right .pro_btn {
  color: #fff;
  font-size: 26rpx;
  height: 62rpx;
  line-height: 62rpx;
  border-radius: 31rpx;
  padding: 0rpx 30rpx;
}
.spike_body .spike_prolist .activity_block  .act_pro .act_pro_right .disable_btn{
  color: #333;
}
.spike_body .spike_prolist .activity_block  .act_pro .act_pro_right .wait_btn{
  /* color: #8a8a8a; */
}
