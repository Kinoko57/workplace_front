/* pages/flashSale/flashSale.wxss */

.flash_bg {
  height: 100%;
}

page {
  background: #f9f9f9
}

.flash_body {
 
}
.flash_body .flash_body_time {
  height: 110rpx;
  background: #f6f6f6;
  width: 100%;
  position: fixed;
  z-index: 3
}

.flash_body .flash_body_time .flash_timelist {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
}

.flash_body .flash_body_time .flash_timelist .flash_time_block {
  width: 30%;
  height: 110rpx;
  position: relative;
  /* background: #ffece8; */
  display: inline-flex;
  align-items: center;
  color: #c8c8c8;
  justify-content: center;
}

.flash_body .flash_body_time .flash_timelist .flash_time_block .time {
  font-size: 28rpx;
  text-align: center;
}

.flash_body .flash_body_time .flash_timelist .flash_time_block .tips {
  font-size: 22rpx;
  color: #e86d56;
  text-align: center;
}

.flash_body .flash_body_time .flash_timelist .flash_time_block .line {
  position: absolute;
  width: 4rpx;
  height: 74rpx;
  right: -4rpx;
  top: 50%;
  transform: translateY(-50%);
}

.flash_body .flash_body_time .flash_timelist .time_block_active {
  /* background: #e13816; */
  width: 40%;
  /* box-shadow: 3px 4px 14.4px 0.6px rgba(239, 60, 20, 0.26);
  text-shadow: 3px 4px 14.4px rgba(239, 60, 20, 0.26); */
}

.flash_body .flash_body_time .flash_timelist .time_block_active .time {
  font-size: 38rpx;
  font-weight: bold;
}

/* 促销列表 */

.flash_body .flash_pro_body {
}

.flash_body .flash_prolist {
  /* overflow: hidden;
  overflow-y: scroll; */
}

.flash_body .flash_prolist .activity_block_01 {
  width: 702rpx;
  height: 414rpx;
  margin: 0 auto;
  background: #fff;
  position: relative;
  overflow: hidden;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}
/* .flash_body .flash_prolist .activity_block_01 .activity_banner{
  padding-top: 30rpx;
  margin: 0 20rpx;
} */

.flash_body .flash_prolist .activity_block_01 .activity_banner image{
  width: 702rpx;
  height: 236rpx;
}
.flash_body .flash_prolist .activity_block_01 .activity_name{
  padding:20rpx 25rpx 8rpx;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 650rpx
}
.flash_body .flash_prolist .activity_block_01 .activity_name text{
  font-size: 28rpx;
  color: #333333;
}
.activity_price_block{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 25rpx;
}
.limit_buy{
  position: absolute;
  top: 40rpx;
  z-index: 2;
}

.limit_buy text{
  display: inline-block;
  padding: 0 15rpx;
  height: 44rpx;
  line-height: 44rpx;
  border-radius:0 22rpx 22rpx 0;
  font-size: 22rpx;
  color: #fff;
}
/* 三行样式 */
.flash_body .flash_prolist .activity_block_01 .activity_price{
  font-size: 24rpx;
  color: #c1c1c1;

}
.flash_body .flash_prolist .activity_block_01 .price{
  font-size: 30rpx;
  margin-right: 8rpx;
}
.flash_body .flash_prolist .activity_block_01 .activity_other{
  font-size: 22rpx;
  color: #333;
  padding-top: 10rpx;
}

.flash_body .flash_prolist .pro_btn .btn_clear{
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  font-size: 24rpx;
  padding: 0 25rpx;
  border-radius: 30rpx;
}