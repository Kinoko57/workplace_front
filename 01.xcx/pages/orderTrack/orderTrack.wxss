/* pages/orderTrack/orderTrack.wxss */

.orderTrack {
  /* padding: 0 26rpx; *//* font-family: SimHei; */
  background: #f2f2f2;
  overflow-x: hidden;
}

.o_t_body {
  /* background: #fff; */
}

.order_info {
  background: #fff;
  padding: 44rpx 26rpx;
}

.order_info view {
  color: #999;
  font-size: 28rpx;
  margin: 18rpx 0;
}

.order_info view text {
  color: #444;
  /* font-weight: bold; */
}

.track_infos {
  background: #fff;
  margin-top: 20rpx;
  padding: 92rpx 26rpx;
  /* display: flex;
  align-items: flex-start; */
}

.track_infos .track_infos_info {
  min-height: 100rpx;
  width: 702rpx;
  display: flex;
  align-items: flex-start;
}

.track_infos_info .track_time {
  /* width: 80rpx; */
  width: 106rpx;
  font-size: 18rpx;
  color: #757575;
  font-weight: bold;
  /* font-family: Arial; */
  float: left;
  text-align: right;
}

.track_infos_info .track_time .track_date {
  width: 80rpx;
  font-family: 'DIN';
  display: block;
}

.track_infos_info .track_time .big_date {
  font-size: 28rpx;
}

.track_infos_info .track_status {
  width: 540rpx;
  color: #ccc;
  float: left;
  min-height: 100rpx;
  position: relative;
  border-left: 4rpx solid;
  margin-left: 30rpx;
  padding-left: 30rpx;
  padding-bottom:20rpx;
}

.track_infos_info:last-child .track_status{
  border-left: none;
}

.track_status .track_border {
  width: 4rpx;
  min-height: 100rpx;
  background: #ccc;
  margin: 0 auto;
}

.track_status image {
  position: absolute;
  left: 0;
  top: -4rpx;
  transform: translateX(-50%);
}

.track_status .t_states {
  width: 24rpx;
  height: 24rpx;
}

.track_status .t_active {
  width: 38rpx;
  height: 38rpx;
}

.track_status .t_hide {
  display: none;
}

.track_status .t_show {
  display: block;
}

.track_infos_info:last-child .track_border {
  display: none;
}

.track_infos_info .track_location {
  /* width: 490rpx; */
  font-size: 25rpx;
  color: #858585;
  float: left;
}

.track_location .track_oprea {
  font-size: 28rpx;
  display: block;
}
