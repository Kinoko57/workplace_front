/* pages/addArticle/addArticle.wxss */
page{
  background: #f6f6f6;
}
.add_bg{
  padding: 26rpx;
}
.input_placeholder{
  font-size: 26rpx;
  color: #a7a7a7;
}
.add_body{
  background: #fff;

}
.add_body .add_title{
  border-bottom: 2rpx solid #f2f2f2;
  margin: 0 20rpx;
}

.add_body .add_title input{
  padding: 20rpx 0;
}
.add_body .add_detail{
  height: 400rpx;
}
.add_body .add_detail textarea{
  padding: 20rpx;
}
.add_body .add_imgs{
  padding: 20rpx;
  overflow: hidden;
}
.add_body .add_imgs .img_block{
  width: 200rpx;
  height: 200rpx;
  margin-right: 10rpx;
  float: left;
  position: relative;
  margin-bottom: 10rpx;
}
.add_body .add_imgs .img_block image{
  width: 100%;
  height: 100%;
}
.add_body .add_imgs .img_block .iconfont {
  position: absolute;
  top: -28rpx;
  right: 0;
  color: #eee;
  z-index: 20;
}
.add_body .add_imgs .add_img_stytle{
  background: #f7f7f7;
  width: 200rpx;
  height: 200rpx;
  text-align: center;
  line-height: 200rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  float: left;
}
.add_body .add_imgs .add_img_stytle .iconfont{
  font-size: 60rpx;
  color: #a7a7a7;
}

.add_body .add_type{
  border-bottom: 2rpx solid #f2f2f2;
  margin: 0 20rpx;
  padding: 20rpx 0;
  font-size: 26rpx;
  color: #a7a7a7;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.add_body .add_type text{
  margin-left: 10rpx;
}
.add_body .add_type .picker{
  display: inline-flex;
  align-items: center;
}
.add_body .add_type .iconfont{
  display: inline-flex;
  align-items: center;
}
.add_btn{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 68rpx;
  width: 100%;
  margin-top: 30rpx;
}
.add_btn button{
  padding:0;
  margin:0;
  outline: none;
  border: none;
  background: transparent;
  width: 340rpx;
  font-size: 30rpx;
  color: #999999;
}
.add_btn button.cancel{
  border: 2rpx solid #dbdbdb;
  border-radius: 10rpx;
}
.add_btn button.sure{
  border: 2rpx solid #0d8d37;
  background: #0d8d37;
  color: #fff;
  border-radius: 10rpx;
}