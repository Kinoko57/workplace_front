/* 搜索样式 */
.i_search{
  position: fixed;
  top: 0;
  z-index: 999;
  width: 702rpx;
  background: #fff;
  padding: 20rpx 24rpx;
}
.i_search_top{
  width: 100%;
  height: 70rpx;
  background: #f6f6f6;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
}
.i_search_top icon{
  padding:0 10rpx 0 20rpx;
  display: inline-flex;
  align-items: center;
}
.i_search_top text{
  font-size: 24rpx;
  color: #999999;
}
.search_scroll{
  white-space: nowrap;
  padding-top: 20rpx;
}
.search_scroll view{
  display: inline-block;
  padding: 0 20rpx;
  height: 58rpx;
  background: #e9f5ed;
  font-size: 24rpx;
  margin-right: 15rpx;
  line-height: 58rpx;
  text-align: center;
  border-radius: 29rpx;
}
/* 首页banner图 */
.i_banner {
  width: 750rpx;
