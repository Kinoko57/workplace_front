/* pages/specialActivity/specialActivity.wxss */
page{
  background: #f6f6f6;
}
.special_bg{
  position: relative;
}
.spec_block{
  position: relative;
  z-index: 2;
}
.special_bg_image{
  position: absolute;
  top: 0;
  left: 0;
  width: 750rpx;
  z-index: 1;
}
.spe_ban{
  margin-bottom:42rpx ;
}
.spe_ban_img{
  width: 750rpx;
  height: 482rpx;
}
.spe_show_block{
  border-radius: 12rpx;
  width: 650rpx;
  margin: 0 auto 22rpx;
}
.spe_show_bg{
  margin:24rpx auto 12rpx;
  background-color: #fff;
  padding: 28rpx 26rpx 32rpx;
}
.spe_show_block .spe_show_titi{
  font-size: 38rpx;
  color: #333;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  font-weight: 600;
  padding-bottom: 20rpx;
  width: 100%;
 }
 .tit_small{
  display: inline-block;
  width:5rpx;
  height:5rpx;
  background:rgba(255,114,133,1);
  border-radius:50%;
 }
 .tit_big{
  display: inline-block;
  width:9rpx;
  margin: 0 8rpx;
  height:9rpx;
  background:rgba(241,59,84,1);
  border-radius:50%;
 }
.spe_show_block .spe_discri{
  width: 100%;
  color: #333;
  font-size: 24rpx;
  word-break: break-all;
  line-height: 1.7;
}
.spe_pro{
  padding:0 24rpx;
}
.spe_pro_block{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.spe_pro_list{
  width: 340rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.spe_pro_list image{
  width: 340rpx;
  height: 340rpx;
}
.spe_pro_list .spe_pro_list_titi{
  font-size: 26rpx;
  color: #333;
  width: 312rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  line-height: 1.6;
  margin: 0 auto;
  padding-top: 20rpx;
}
.spe_pro_list .spe_pro_list_dis{
  padding-left: 18rpx;

}
.spe_pro_list .spe_pro_list_dis text{
  display: inline-block;
  padding: 0 12rpx;
  font-size: 20rpx;
  border:1px solid rgba(240,65,27,1);
  border-radius:6px 6px 6px 6px;
  height: 30rpx;
  line-height: 30rpx;
}
.spe_pro_list .spe_pro_list_pri{
  font-size: 22rpx;
  color: #C1C1C1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx 12rpx 20rpx;
}
.spe_pro_list_pri_l .spe_pro_list_pri_num{
  font-size: 32rpx;
  padding-right: 10rpx;
  font-weight: 600;
}
