  background: #f0f9eb;
  border-color: #c2e7b0;
}

.my_bg .my_use .my_use_block view {
  width: 25%;
  text-align: center;
  display: inline-block;
  padding-bottom:30rpx;
}
.my_bg .my_use .my_use_block .my_use_block_list view.text{
  display: block;
  width: 100%;
  text-align: center;
}
button.contact{
  background: transparent;
  outline: none;
  padding: 0;
  margin: 0;
  line-height: normal;
  position: relative;
  top: 6rpx;
}
.my_bg .my_use .my_use_block .use_img {
  height: 69rpx;
  width: 90rpx;
}

.my_bg .my_use .my_use_block  .use_name {
  color: #666;
  font-size: 24rpx;
  display: block;
}
.my_banner{
  width: 710rpx;
  height: 300rpx;
  display: block;
  border-radius: 20rpx;
  margin: 0 auto 25rpx;
}
