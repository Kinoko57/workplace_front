/* pages/guidePage/guidePage.wxss */

.guide_bg {
  position: relative;
  width: 100%;
  height: 100;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #eee;
}
.countdown{
  position: absolute;
  right: 10rpx;
  top: 24rpx;
  z-index: 99;
}
.countdown_time{
  height: 50rpx;
  display: inline-flex;
  align-items: center;
  padding: 0 25rpx;
  font-size: 26rpx;
  border-radius: 25rpx;
  border: 1px solid #f9f9f9;
  color: #fff;
}
.guide_img{
  position: absolute;
  top: 0;
  width: 100%;
  height: 100vh;
}