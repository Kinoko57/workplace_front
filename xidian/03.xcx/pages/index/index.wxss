/* * 种草专区 */ 
.index_body{
  padding: 0 24rpx;
}
.index_block{
  margin-top:28rpx ;
  box-shadow: 0px 0px 14.72px 1.28px rgba(179, 179, 179, 0.37);
  background-color: #fff;
  border-radius: 10rpx;
}

.i_block_top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  line-height: 86rpx;
  padding: 20rpx 24rpx 0;
}

.i_block_top .i_top_title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  display: flex;
  align-items: center;
}
.i_top_title_img{
  margin-right: 10rpx;
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
}
.more_link{
  font-size: 24rpx;
  color: #333;
}
.i_plant_grass .i_block_top .i_top_more .iconfont {
  font-size: 26rpx;
}

.i_plant_grass .i_plant_grass_bottom {
  padding: 14rpx 24rpx 44rpx;
  white-space: nowrap;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

.i_plant_grass .i_plant_grass_bottom .i_plant_grass_typelist {
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-around
}

.i_plant_grass .i_plant_grass_bottom .i_plant_grass_typelist .grass_type {
  display: inline-block;
  text-align: center;
  /* width: 145rpx; */
  min-width: 100rpx;
  margin-right: 50rpx;
}

.i_plant_grass .i_plant_grass_bottom .i_plant_grass_typelist .grass_type:last-child {
  margin-right: 0;
}

.i_plant_grass .i_plant_grass_bottom .i_plant_grass_typelist .grass_type .type_img {
  height: 98rpx;
  width: 98rpx;
  margin: 0 auto;
  border-radius: 50%;
  overflow: hidden;
}
.i_plant_grass .i_plant_grass_bottom .i_plant_grass_typelist .grass_type .type_img image {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}

.i_plant_grass .i_plant_grass_bottom .i_plant_grass_typelist .grass_type .type_other {
  font-size: 22.14rpx;
  text-align: center;
  padding-top: 14rpx;
}

.i_plant_grass .i_plant_grass_bottom .i_plant_grass_typelist .grass_type .type_other .type_name {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  /* width: 145rpx; */
  text-align: center;
}

.i_plant_grass .i_plant_grass_bottom .i_plant_grass_typelist .grass_type .type_other .type_name text {
  color: #333;
  font-size: 24rpx;
}

