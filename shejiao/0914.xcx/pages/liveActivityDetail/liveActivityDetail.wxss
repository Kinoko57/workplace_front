/* pages/liveActivity/liveActivity.wxss */
page{
  background: #f9f9f9;
}
.gift_bg{

}
.gift_bg .gift_body{
  padding: 0 24rx;
  margin-top: 20rpx;
}
.gift_list{
  width: 702rpx;
  margin: 0 auto;
}
.gift_list .gift_list_block{
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.gift_list .gift_list_block .gift_block_top{
  padding: 24rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size:26rpx;
  font-weight:bold;
  color:rgba(52,52,52,1);
  border-bottom: 2rpx solid rgba(239,239,239,1);
}

.gift_list .gift_list_block .gift_block_top .time{
  font-weight: 400;
}
.gift_list .gift_list_block .gift_block_top .status{
  font-size:23rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(255,0,0,1);
}
.gift_list .gift_block_bottom{
  min-height: 135rpx;
}
.gift_list .gift_block_bottom .blcok_tips{
  padding: 0 24rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size:26rpx;
  font-weight:400;
  color:rgba(52,52,52,1);
  border-top:2rpx solid rgba(236,236,236,1);
}
.gift_list .gift_block_bottom .red_package{
  height: 135rpx;
  line-height: 135rpx;
  padding: 0 24rpx;

}
.gift_list .gift_block_bottom .red_package image{
  width: 46rpx;
  height: 52rpx;
  padding-left: 21rpx;
  padding-right: 42rpx;
}
.gift_list .gift_block_bottom .red_package .name{
  font-size:27rpx;
  font-weight:400;
  color:rgba(52,52,52,1);
}

.gift_list .gift_block_bottom .win_activity{
  padding: 0 24rpx;
}
.gift_list .gift_block_bottom .win_activity .win_pro{
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  /* padding-bottom: 0; */
}
.gift_list .gift_block_bottom .win_activity .win_pro .pro_img{
  width: 160rpx;
  height: 160rpx;
  margin-right: 35rpx;
}
.gift_list .gift_block_bottom .win_activity .win_pro .pro_img image{
  width: 100%;
  height: 100%;
}
.gift_list .gift_block_bottom .win_activity .win_pro .pro_info{
  width: 440rpx;
  font-size:27rpx;
  font-weight:400;
  color:rgba(52,52,52,1);
}
.gift_list .gift_block_bottom .win_btn{
  display: flex;
  justify-content: flex-end;
  padding-bottom: 33rpx;
}
.gift_list .gift_block_bottom .win_btn .btn{
  width:187rpx;
  height:56rpx;
  border: 2rpx solid rgba(255,0,0,1);
  font-size:23rpx;
  font-weight:400;
  color:rgba(255,0,0,1);
  text-align: center;
  line-height: 56rpx;
  border-radius: 50rpx;
}
/* 中奖人列表 */
.gift_result{
  padding: 24rpx 0;
}
.gift_result .result_title{
  font-size:26rpx;
  font-weight:400;
  color:rgba(154,154,154,1);
  padding: 0 24rpx;
}
.gift_result .result_list{
  
}
.gift_result .result_list .result_list_block{
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom:2rpx solid rgba(236,236,236,1);
  padding: 24rpx;
  font-size:23rpx;
  font-weight:400;
  color:rgba(52,52,52,1);
}
.gift_result .result_list .result_list_block .name{
  font-size:26rpx;
  width: 36%;
  overflow: hidden;
  /*超出部分隐藏*/
  white-space: nowrap;
  /*不换行*/
  text-overflow: ellipsis;
}
.gift_result .result_list .result_list_block:last-child{
  border-bottom: none;
  padding-bottom: 0;
}
.gift_result .result_list .result_list_block .block_right{
  
}
.gift_result .result_list .result_list_block .block_btn{
  display: inline-flex;
  width: 60%;
  font-size:23rpx;
  font-weight:400;
  justify-content: flex-end;
}
.gift_result .result_list .result_list_block .block_btn .view_btn{
  width: 187rpx;
  height: 56rpx;
  border: 2rpx solid rgba(229,229,229,1);
  text-align: center;
  line-height: 56rpx;
  color:rgba(102,102,102,1);
  border-radius: 50rpx;
  padding: 0 10rpx;
}

.gift_result .result_list .result_list_block .block_btn .view_btn:first-child{
  margin-right: 10rpx;
}
.gift_result .result_list .result_list_block .block_btn .send_btn{
  width: 101rpx;
  height: 56rpx;
  border: 2rpx solid rgba(255,0,0,1);
  text-align: center;
  line-height: 56rpx;
  border-radius: 50rpx;
  color: rgba(255,0,0,1);
  padding: 0 10rpx;
}
.gift_result .result_list .result_list_block .block_btn .disable_btn{
  color: rgba(154,154,154,1);
  border: 2rpx solid rgba(229,229,229,1);
}

.view_addr{
  height: 36vh;
  top: calc(100% - 36vh);
  animation: modelSheet 300ms ease-out;
}
.view_addr .model_title{
  text-align: left;
  padding: 40rpx 30rpx;
  font-size: 30rpx;
  font-weight: bold;
}
.view_addr .model_body {
  padding: 20rpx 50rpx;
  height: 30%;
  font-size: 28rpx;
  color: #333;
}
.view_addr .model_body .model_addr{
  font-size: 22rpx;
  margin-top: 24rpx;
}
.view_addr .model_body .model_block{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.view_addr .model_body .model_block .picker_text{
  font-size: 26rpx;
  display: inline-flex;
  align-items: center;
  color: #666;
  width: 500rpx;
  justify-content: flex-end;
}
.view_addr .model_body .model_block .picker_text icon{
  display: inline-flex;
  font-size: 26rpx;
}
.view_addr .model_body .after_tracking {
  background: #fff;
  display: flex;
  align-items: center;
  height: 80rpx;
}
.view_addr .model_body .after_tracking text {
  font-size: 26rpx;
}
.view_addr .model_body .after_tracking input{
  width: 400rpx;
  text-align: right;
}
.view_addr .model_footer{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.view_addr .buy_disable_btn{
  background: #E9E9E9;
  border-radius: 50rpx;
  width: 640rpx;
  color: #666;
  padding: 14rpx 0;
  font-weight: 400;
  font-size: 26rpx;
}
.view_addr .short_width{
  width: 45%;
  border-radius: 50rpx;
  font-size: 26rpx;
  font-weight: 400;
  padding: 14rpx 0;
}
.view_addr .buy_btn{
  background:linear-gradient(-90deg,rgba(221,44,47,1) 0%,rgba(255,80,83,1) 100%);
  color: #fff;
}
@keyframes modelSheet {
  from {
    top: 100%;
  }

  to {
    top: calc(100% - 36vh);
  }
}