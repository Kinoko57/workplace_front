/* pages/anchorPeopson/anchorPeopson.wxss */
page{
  background: #f9f9f9;
}
.anchorPer_body{
  padding: 0 24rpx;
}
.anchorPer_body_top{
  padding-top: 25rpx;
  padding-bottom: 35rpx;
  display: flex;
  justify-content: space-between;
}
.anchorPer_body_top .anchorPer_body_top_img{
  width:140rpx;
  height:140rpx;
  margin-right: 34rpx;
  border-radius:50%;
}
.anchorPer_body_top_r{
  width:530rpx;
  position: relative;
}
.anchorPer_body_top_r_info{
  color: #333;
  width: 440rpx;
  padding-top: 30rpx;
}
.anchorPer_body_top_r_info .anchorPer_name{
  font-size: 34rpx;
  width: 420rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.anchorPer_body_top_r_info .anchorPer_label{
  padding:30rpx 0;
}
.anchorPer_body_top_r_info .anchorPer_label view{
  height: 44rpx;
  padding: 0 16rpx;
  font-size: 22rpx;
  color: #666;
  display: inline-flex;
  align-items: center;
  background: #EFEFEF;
  border-radius: 4rpx;
  margin-right: 8rpx;
}
.anchorPer_body_top_r_info .anchorPer_label view icon{
  font-size: 30rpx;
  display: inline-flex;
  color: #FF0000;
}
.anchorPer_body_top_r_edit{
  position: absolute;
  top: 40rpx;
  right: 20rpx;
}
.anchorPer_body_top_r_edit image{
  width: 23rpx;
  height: 28rpx;
  margin-top: 30rpx;
}
.follow_btn{
  margin-right: 24rpx;
}
.follow_btn view{
  width: 190rpx;
  height: 56rpx;
  font-size: 26rpx;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
}
.follow_btn view icon{
  display: inline-flex;
}
.follow_btn .each_follow{
  border:1px solid #FF0000;
  color: #FF0000;
 
}
.follow_btn .follow_for {
  color: #fff;
  background: linear-gradient(264deg,rgba(221,44,47,1) 0%,rgba(255,80,83,1) 100%);
}
.follow_btn .cancel_follow{
  color: #666;
  background: #E5E5E5;
}
.anchorPer_body_top_r_info .anchorPer_fans{
  font-size: 28rpx;
  width: 420rpx;
  color: #999;
  display: flex;
  justify-content: space-between;
}
.anchorPer_nav{
  display: flex;
  padding-top: 26rpx;
  justify-content: space-around;
  color: #333;
  font-size: 26rpx;
  margin-bottom: 30rpx;
  border-bottom: 1px solid #EEEEEE;
}
.anchorPer_nav text{
  width: 136rpx;
  text-align: center;
  padding-bottom: 26rpx;
  border-bottom: 4rpx solid transparent
}
.anchorPer_nav .nav_active{
  border-bottom: 4rpx solid #ff0000;
  font-weight: 600;
}
.anchorPer_block{
 overflow: hidden;
  width: 100%;
}
.anchorPer_block .anchorPer_block_left{
   float: left;
}
.anchorPer_block .anchorPer_block_right{
  float: right;
}
.anchorPer_block_list{
  width: 340rpx;
  background: #fff;
  margin-bottom: 25rpx;
  border-radius:12rpx;
  overflow: hidden;
  padding-bottom: 20rpx;
}
.anchorPer_block_list_img{
  position: relative;
  z-index: 1;
  width: 339rpx;
}
.anchorPer_block_list_img image{
  width: 339rpx;
  border-radius:0 0 12rpx 12rpx;
}
.anchorPer_null_data{
  width: 339rpx;
  height: 300rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0,0,0,.4);
}
.anchorPer_null_data icon{
  font-size: 40rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}
.anchorPer_block_list_img video{
  width: 339rpx;
  position: relative;
  border-radius:0 0 12rpx 12rpx;
  display: block;
}
.anchorPer_block_list_img .video_mask{
  position: absolute;
  z-index: 9998;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.video_mask image{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
}
.video_mask .anchor_remind{
  position: absolute;
  top: 29rpx;
  right: 26rpx;
  height: 38rpx;
  line-height: 38rpx;
  padding: 0 15rpx;
  display: flex;
  align-items: center;
  color: #fff;
  font-size: 18rpx;
  border-radius: 19rpx;
  background: rgba(0,0,0,.5);
}
.video_mask .anchor_remind icon{
  display: inline-flex;
  font-size: 24rpx;
  margin-right: 6rpx;
}
.anchorPer_block_list_titi{
  font-size: 24rpx;
  padding: 18rpx 6rpx 0;
  color: #333;
  font-weight: 600;
  line-height: 1.5;
}
.anchorPer_block_list_info{
  display: flex;
  padding: 15rpx 6rpx 0;
  align-items: center;
  color: #999;
  justify-content: space-between;
}
.anchorPer_block_list_info .anchorPer_block_list_info_l{
   font-size: 18rpx;
   display: inline-flex;
   align-items: center;
}
.anchorPer_block_list_info .anchorPer_block_list_info_l image{
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.anchorPer_block_list_info_r{
  font-size: 24rpx;
}
.anchorPer_block_list_info_r icon{
  display: inline-flex;
  font-size: 26rpx;
  color: #FF0000;
  margin-right: 15rpx;
}
