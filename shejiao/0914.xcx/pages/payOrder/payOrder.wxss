/* pages/payOrder/payOrder.wxss */
page{
  background: #fff;
}
.pay_body{
  height: 100%;
  overflow: hidden;
  overflow-y: scroll;
}
.pay_body_t{
  background: #fff;
  padding:60rpx 0 0;
  text-align: center;
  font-size: 58rpx;
  border-top: 1px solid #ccc;
}
.pay_body_t .money_mode{
  font-size: 30rpx;
}
/* 倒计时样式 */
.countdown_bg{
  width: 100%;
  padding-top: 20rpx;
  text-align: center;
}
.countdown_bg .countdown_block{
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.countdown_block .pay_coutdown{
  color: #333;
}
.countdown_bg .countdown_block text{
  margin: 0 4rpx;
}

.pay_body_b{
   
}
.pay_body_b .pay_body_title{
  font-size: 28rpx;
  background: #fff;
  font-weight:bold;
  color: #333;
  padding: 36rpx 24rpx 0;
}
.pay_body_b .pay_type{
  padding: 0 24rpx;
  background: #fff;
}
.pay_body_b .pay_type .pay_info{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom:1px solid #ededed ;
  height: 116rpx;
}
.pay_body_b .pay_type .pay_info:last-child{
  border-bottom: 0;
}
.pay_more{
  display: flex;
  align-items: center;
  color: #333;
  font-size: 28rpx;
}
.pay_more .pay_image{
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.pay_mode_chose{
  background: #fff;
  padding: 0 24rpx;
  height: 116rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.pay_mode_chose .iconfont{
  color:#B9B9B9;
  font-size: 40rpx;
}
.pay_mode_chose .pay_more{
  padding-left: 62rpx;
}
.pay_info .dis_money{
  width:100rpx;
  height:32rpx;
  line-height: 32rpx;
  background:rgba(236,61,63,0.06);
  border-radius:4rpx;
  text-align: center;
  font-size:22rpx;
  margin-left: 10rpx;
  font-weight:400;
  color:rgba(237,60,63,1);
}

/* radio的默认样式 */

radio .wx-radio-input {
  border-radius: 50%;
  width: 34rpx;
  height: 34rpx;
  border: 1px solid #B9B9B9;
}

radio .wx-radio-input.wx-radio-input-checked {
  border: 1px solid transparent;
  background: #e13917;
}

radio .wx-radio-input.wx-radio-input-checked::before {
  border-radius: 50;
  width: 32rpx;
  height: 32rpx;
  line-height: 34rpx;
  text-align: center;
  font-size: 30rpx;font-weight: bold;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}
.pay_btn{
  position: fixed;
  bottom: 62rpx;
  width:656rpx;
  height:80rpx;
  left: 50%;
  color: #fff;
  font-size:28rpx;
  text-align: center;
  line-height: 80rpx;
  transform: translateX(-50%);
  border-radius: 40rpx;
}
