/* pages/personCenter/personCenter.wxss */
page {
  background: #fff;
}
.p_center {
  font-family: SimHei;
  overflow-x: hidden;
}
.pc_body {
  padding: 0 22rpx;
  border-top: 1px solid #ccc;
}

.pc_info {
  border-bottom: 1px solid #e4e4e4;
  display: flex;
  align-items: center;
  font-size: 33rpx;
  color: #333;
  justify-content: space-between;
  height:124rpx;
}
.pc_avt{
  height: 134rpx;
}
.pc_info .info_title {
  width: 200rpx;
  text-align: left;
  color: #999;
  font-size: 28rpx;
  display: inline-block;
}

.pc_info .info_more {
  display: inline-flex;
  align-items: center;
  min-width: 80rpx;
  font-family: 'DIN';
  font-size: 28rpx;
  justify-content: flex-end;
}

.pc_info .info_more text {
  font-family: 'DIN';
  font-size: 28rpx;
}

.pc_info .info_more .pc_avatar {
  width: 84rpx;
  height:84rpx;
  border-radius: 50%;
}
.pc_info .info_more .address{
  width: 504rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.pc_info .info_more icon {
  margin-left: 10rpx;
  color: #B9B9B9;
  font-size:33rpx;
  display: inline-flex;
  align-items: center
}
.pc_body .pc_info:last-child {
  border: none;
}
.pc_top{
  border-top: 0;
}
.pc_top .pc_info:last-child {
  border-bottom: 1px solid #e4e4e4;
}
/* 弹出层 */

.avatar_model_bg {
  position: fixed;
  background: rgba(0, 0, 0, 0.4);
  width: 100%;
  height: 100%;
  top: 0;
  z-index: 50;
}

.avatar_model {
  width: 548rpx;
  height: 328rpx;
  border-radius: 10rpx;
  position: fixed;
  margin: auto;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  z-index: 60;
  background: #fff;
  /* text-align: center; */
}

.avatar_title {
  height: 82rpx;
  margin-top: 20rpx;
  padding-left: 30rpx;
  border-bottom: 5rpx solid #e2e2e2;
  display: flex;
  align-items: center;
}

.avatar_title text {
  color: #333;
}

.avatar_info {
  height: 112rpx;
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  border-bottom: 1px solid #e2e2e2 !important;
}

.avatar_info:last-child {
  border: none !important;
}

.avatar_info image {
  width: 34rpx;
  height: 30rpx;
}

.avatar_info text {
  margin-left: 20rpx;
}
