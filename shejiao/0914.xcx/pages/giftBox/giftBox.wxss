page{
  background-color: #f6f6f6;
}
.gift{
  width: 100%;
}
.gift_body .gift_banner image{
  width: 750rpx;
  height: 536rpx;
}
.gift_body_padding{
  /* padding: 0 24rpx; */
}
.gift_scroll{
  width: 100%;
}
.gift_body_wraper{
  padding:0 24rpx;
}
.gift_body_block{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  /* overflow: hidden; */
}
.gift_body_list{
  background: #fff;
  width:340rpx ;
  border-radius: 12rpx;
  overflow: hidden;
  padding-bottom: 15rpx;
  margin-bottom: 20rpx;
  /* float: left; */
}
/* .gift_body_list:nth-child(odd){
  margin-right: 10rpx;
}
.gift_body_list:nth-child(even){
  margin-left: 10rpx;
} */
.gift_body_list .gift_img{
  width: 340rpx;
  height: 340rpx;
}
.gift_body_list_wra{
  padding: 0 20rpx;
}
.gift_body_list .gift_body_titi{
  font-size: 26rpx;
  color: #333;
  width: 302rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  line-height: 1.6;
  margin: 0 auto;
  padding-top: 15rpx;
}
.gift_body_list .limit_label{
  height:30rpx;
  border-radius: 15rpx;
  padding: 0 6rpx;
  font-size: 22rpx;
  margin-right: 8rpx;
}
.i_limit_r_bar {
  height: 14rpx;
  display: flex;
  align-items: center;
  margin: 12rpx 0 15rpx;
}

.i_limit_r_bar_line {
  width: 240rpx;
  height: 10rpx;
  border-radius:5rpx;
  overflow: hidden;
}

.i_limit_r_bar_line view {
  width: 60%;
  height: 10rpx;
  border-radius: 5rpx;
  overflow: hidden;
}
.i_limit_sales {
  font-size: 16rpx;
  color: #999;
  margin-left: 16rpx;
}
.gift_body_pri{
  display: flex;
  justify-content:space-between;
  align-items: center;
}
.gift_body_pri .pri_num{
   
}
.gift_body_pri .pri_num .sale_pri{
   font-size: 32rpx;
   padding-right: 10rpx;
   font-weight: 600;
}
/* .pri_num .sale_pri .pri_count{
