.login_bg{
  width: 100%;
  height: 100vh;
  position: relative;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: -webkit-linear-gradient(bottom,#10ad43,#0d8d37);
  
}
.login_text{
  color: #fff;
  padding-left: 56rpx;
  padding-top: 150rpx;
}
.login_big{
  font-size:50rpx;
}
.login_samll{
  display: block;
  padding-top: 44rpx;
  font-size:30rpx;
  color: #c6f5d5;
}
.login_auth{
  position: fixed;
  top: 55%;
  left: 50%;
  transform: translateX(-50%);
  width: 660rpx;
  height: 86rpx;
  background: #fff;
  line-height: 86rpx;
  border-radius: 41rpx;
  overflow: hidden;
  box-shadow: 0 0 10rpx #0d8d37
}
.login_auth .login_btn{
  width: 660rpx;
  height: 86rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}
.agreement{
   position: fixed;
   left: 0;
   width: 100%;
   bottom: 60rpx;
