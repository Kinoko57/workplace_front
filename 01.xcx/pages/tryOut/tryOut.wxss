/* pages/tryOut/tryOut.wxss */
@import '../footer/footer.wxss';

.try_out {
  font-family: SimHei;
  background: #f2f2f2;
  overflow-x: hidden;
}

.try_body {
  height: 100%;
  background: #fff;
}

.try_body .try_count_down {
  height: 200rpx;
  background: #fff;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.try_count_down .count_time {
  width: 216rpx;
  text-align: center;
  /* padding: 0 26rpx; */
}

.count_time view {
  font-size: 30rpx;
  font-weight: bold;
  color: #202020;
  margin-bottom: 4rpx;
  font-family: 'DIN';
}

.count_time view .time_bg {
  background: #343434;
  border-radius: 5rpx;
  color: #fff;
  /* font-size: 30rpx;font-weight: bold; */
  font-size: 24rpx;
  font-family: 'DIN';
  padding: 5rpx;
}

.count_time view text {
  margin: 0 2rpx;
}

.try_body .sale_tab {
  height: 100rpx;
  white-space: nowrap;
  display: flex;
  background: #000;
  margin-bottom: 20rpx;
}

.sale_tab .sale_nav {
  /* overflow: hidden; *//* float: left; */
  display: inline-block;
  text-align: center;
  position: relative;
  /* height: 120rpx; */
  width: 33%;
  background: #000;
  padding: 16rpx 0;
  /* padding: 18rpx 0; */
}

.sale_tab .sale_active {
  background: #ff8d97;
  /* font-weight: bold;
  height: 82rpx; */
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  /* padding: 17rpx 0; */
  /* height: 100rpx; */
}

.sale_nav text {
  display: block;
  text-align: center;
  color: #fff;
  margin: 0;
  padding: 0;
}

.sale_tab .sale_nav image {
  height: 48rpx;
  width: 16rpx;
  transform: rotate(90deg);
  position: absolute;
  bottom: -8rpx;
}

.sale_nav .sale_time {
  font-size: 34rpx;
  /* font-size: 30rpx; */
  /* font-weight: bold; */
  font-family: 'DIN';
  /* margin-bottom:4rpx; */
}

.sale_nav .sale_states {
  font-size: 24rpx;
  /* margin-top: -2rpx; */
}

.sale_tab .sale_active .sale_time {
  font-family: 'DIN';
  color: #fff;
  /* padding-top: 16rpx; *//* color: #fffc00; */
}

.sale_tab .sale_active  .sale_states {
  /* color: #fffc00; */
  color: #fff;
}

.try_downlist {
  width: 540rpx;
  white-space: nowrap;
  display: flex;
}

.try_downlist .try_down_pro {
  width: 128rpx;
  height: 128rpx;
  background: #f2f2f2;
  text-align: center;
  padding: 16rpx;
  display: inline-block;
  margin: 0 6rpx;
}

.try_down_pro image {
  width: 77rpx;
  height: 77rpx;
  vertical-align: middle;
}

.try_down_pro view {
  font-size: 20rpx;
  color: #959595;
  font-family: 'DIN';
}

.try_down_pro view text {
  color: #404040;
}

.try_down_pro .price {
  color: #3f3f3f;
}

.try_down_pro .price text {
  color: #3f3f3f;
}

.tryList {
  padding: 0 26rpx;
  background: #fff;
}

.tryList .try_blcok {
  height: 342rpx;
  background: #fff;
  display: flex;
  align-items: center;
  border-radius: 12rpx;
  box-shadow: 0 3rpx 4rpx 2rpx #e4e4e4;
  padding: 0 40rpx;
  margin-bottom: 30rpx;
}

.try_blcok .t_b_img {
  float: left;
  margin-right: 36rpx;
  position: relative;
}

.try_blcok .t_b_img image {
  width: 260rpx;
  height: 260rpx;
}

.try_blcok .t_b_img text {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  font-size: 26rpx;
  width: 190rpx;
  text-align: center;
  padding: 10rpx 0;
  background: rgba(0, 0, 0, 0.4);
  color: #fff;
}

.try_blcok .t_b_info {
  width: 320rpx;
}

.t_b_info .t_b_title {
  font-size: 24rpx;
  color: #444;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.t_b_title  .pro_level {
  width: 80rpx;
  border: 2rpx solid #ff8d97;
  border-radius: 16rpx;
  display: inline-flex;
  align-items: center;
  margin-right: 6rpx;
  padding: 0 4rpx;
  justify-content: center;
}

.pro_level .iconfont {
  color: #ff8d97;
  display: inline-flex;
}

.pro_level text {
  color: #ff8d97;
}

.t_b_info_left .t_b_other {
  text-align: left;
  /* margin-top: 10rpx; */
}

.t_b_info_left .t_b_other .text_bg {
  width: 64rpx;
  height: 26rpx;
  line-height: 26rpx;
  background: #ff8d97;
  color: #fff;
  display: inline-block;
  text-align: center;
  font-size: 20rpx;
  border-radius: 8rpx;
}

.t_b_other view {
  font-family: 'DIN';
  display: flex;
  align-items: center;
}

.t_b_other .t_b_price {
  font-size: 36rpx;
  /* margin-right: 26rpx; */
  margin-bottom: 30rpx;
}

.t_b_other .t_b_num {
  color: #888;
  margin: 0 4rpx;
  font-size: 20rpx;
}

.t_b_info_right {
  display: inline-flex;
  align-items: center;
  justify-content: space-between;
  width: 320rpx;
}

.t_b_info_right button {
  min-width: 150rpx;
  height: 52rpx;
  color: #fff;
  font-size: 26rpx;
  padding: 0rpx 20rpx;
  line-height: 52rpx;
  border-radius: 12rpx;
  margin: 0;
}

.t_b_info_right .running {
  background: #ff8d97;
}

.t_b_info_right .start {
  background: #c6c6c6;
}

.t_b_info_right .end {
  background: #d3d3d3;
}

.t_b_info_right button::after {
  border: none;
}

.nulldata {
  height: 84rpx;
  line-height: 84rpx;
  /* background: #fff; */
  text-align: center;
}

.nulldata text {
  font-size: 23.97rpx;
  color: #bebebe;
}

.order-foot {
  height: 84rpx;
  line-height: 84rpx;
  /* background: #fff; */
  text-align: center;
}

.order-foot text {
  font-size: 23.97rpx;
  color: #bebebe;
}

/* 空白块，撑起高度 */

.null_block {
  height: 100rpx;
}
