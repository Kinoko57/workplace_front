/* pages/flashSale/flashSale.wxss */
@import '../footer/footer.wxss';

.sale {
  position: relative;
}

.sale_white {
  background: #fff;
}

.sale_body {
  height: 100%;
  background: #fff;
}

.sale_body .sale_banner {
  height: 450rpx;
}

.sale_body .sale_banner image {
  height: 450rpx;
  width: 100%;
}

.sale_body .sale_tab {
  height: 100rpx;
  white-space: nowrap;
  display: flex;
  background: #000;
}

.sale_tab .sale_nav {
  /* overflow: hidden; *//* float: left; */
  display: inline-block;
  text-align: center;
  position: relative;
  /* height: 120rpx; */
  width: 33%;
  background: #000;
  /* height: 100rpx; */
  padding:17rpx 0;

}

.sale_tab .sale_active {
  background: #ff8d97;
  /* font-weight: bold;
  height: 82rpx; */
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.sale_nav text {
  display: block;
  text-align: center;
  color: #fff;
  margin: 0;
  padding: 0;
}

.sale_tab .sale_nav image {
  height: 48rpx;
  width: 16rpx;
  transform: rotate(90deg);
  position: absolute;
  bottom: -8rpx;
}

.sale_nav .sale_time {
  font-size: 36rpx;
  /* font-weight: bold; */
  font-family: 'DIN';
}

.sale_nav .sale_states {
  font-size: 24rpx;
  margin-top: -2rpx;
}

.sale_tab .sale_active .sale_time {
  font-family: 'DIN';
  color: #fff;
  /* padding-top: 16rpx; */
  /* color: #fffc00; */
}

.sale_tab .sale_active  .sale_states {
  /* color: #fffc00; */
  color: #fff;
}

.sale_title {
  padding: 50rpx 26rpx;
  /* height: 98rpx; */
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.sale_title .sale_left {
}

.sale_left text {
  font-size: 30rpx;
  color: #ff8d97;
}

.sale_right {
  font-size: 28rpx;
  color: #000;
  display: flex;
  align-items: center;
}

.sale_right icon {
  /* transform: rotate(-30deg); */
  color: #000;
  margin-right: 6rpx;
  display: inline-flex;
}

.sale_right .time {
  font-family: 'DIN';
  font-size: 30rpx;
  /* font-weight: bold; */
  color: #f56e92;
  width: 120rpx;
}

.sale_body_list .sale_list {
  padding: 0 20rpx;
}

.sale_list {
  padding: 0 26rpx;
}

.sale_list .sale_pro {
  height: 342rpx;
  background: #fff;
  display: flex;
  align-items: center;
  border-radius: 12rpx;
  box-shadow: 0 3rpx 4rpx 2rpx #e4e4e4;
  padding: 0 40rpx;
  margin-bottom: 30rpx;
}

.sale_pro .pro_img {
  float: left;
  margin-right: 40rpx;
  position: relative;
}

.pro_img image {
  width: 260rpx;
  height: 260rpx;
}

.sale_pro .pro_info {
  width: 100%;
}

.pro_info .pro_title {
  font-size: 24rpx;
  color: #444;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  min-height: 64rpx;
}

.pro_title  .pro_level {
  width: 80rpx;
  border: 2rpx solid #ff8d97;
  border-radius: 16rpx;
  display: inline-flex;
  align-items: center;
  margin-right: 6rpx;
  padding: 0 4rpx;
  justify-content: center;
}

.pro_level .iconfont {
  color: #ff8d97;
  display: inline-flex;
}

.pro_level text {
  color: #ff8d97;
}

.pro_info .pro_progress {
  height: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 30rpx 0;
}

.pro_progress .prog {
  width: 220rpx;
  height: 20rpx;
  background: #ebebeb;
  border-radius: 10rpx;
}

.pro_progress .prog view {
  width: 60%;
  height: 20rpx;
  background: #ff8d97;
  border-radius: 10rpx;
}

.pro_progress text {
  color: #999;
  font-size: 20rpx;
  font-family: 'DIN';
}

.pro_info .pro_spec {
  overflow: hidden;
}

.pro_spec .pro_price {
  font-family: 'DIN';
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.pro_price .peo_nowprice {
  color: #ff8d97;
  font-size: 30rpx;
  font-weight: bold;
}

.pro_price .pro_integral {
  font-size: 30rpx;
  font-weight: bold;
  color: #ff8d97;
}

.pro_price .pro_inter_img {
  display: inline-flex;
  /* align-items: flex-end; */
  align-items: center;
}

.pro_price .pro_inter_img .iconfont {
  font-size: 30rpx;
  font-weight: bold;
  display: inline-flex;
  color: #ff8d97;
}

.pro_spec .pro_orig {
  font-size: 20rpx;
  color: #989898;
}

.pro_spec .line {
  text-decoration: line-through;
  margin-left: 6rpx;
}

.pro_spec .pro_icon {
  margin-right: 4rpx;
  display: flex;
}

.pro_icon image {
  width: 50rpx;
  height: 46rpx;
}

.pro_icon .active {
  width: 160rpx;
  height: 52rpx;
  background: #ff8d97;
  color: #fff;
  font-size: 24rpx;
  padding: 0rpx 20rpx;
  line-height: 52rpx;
  border-radius: 12rpx;
}

.pro_icon .start {
  width: 160rpx;
  height: 52rpx;
  background: #d3d3d3;
  color: #fff;
  font-size: 24rpx;
  padding: 0rpx 20rpx;
  line-height: 52rpx;
  border-radius: 12rpx;
}

.sale_body_list .sale_tab {
  height: 120rpx;
}

.order-foot {
  height: 84rpx;
  line-height: 84rpx;
  text-align: center;
}

.order-foot text {
  font-size: 23.97rpx;
  color: #bebebe;
}

.sale_list_null {
  text-align: center;
  font-size: 30rpx;
  /* font-weight: bold; */
  padding: 40rpx 0;
  background: #f2f2f2;
}

