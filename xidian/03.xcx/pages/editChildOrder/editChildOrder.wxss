/* 监护人样式 */
.super_block{
  display: flex;
  flex-wrap: wrap;
  padding-top: 30rpx;
}
.super_block_list{
  
  margin-right: 20rpx;
  margin-bottom: 15rpx;
}
.super_block_t{
  width: 118rpx;
}
.super_img{
  position: relative;
}
.super_block_t image{
  height: 116rpx;
  width: 116rpx;
