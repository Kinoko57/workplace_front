page {
  background: #f2f2f2;
}

.e_body {
  padding: 0 26rpx;
  height: 100vh;
  background: #fff;
}

.e_body .section {
  border-bottom: 1px solid #e3e3e3;
}

.e_body .info_tips {
  font-size: 24rpx;
  margin-top: 10rpx;
  margin-bottom: -24rpx;
}

