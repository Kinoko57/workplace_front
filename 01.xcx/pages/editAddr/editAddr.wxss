/* pages/editAddr/editAddr.wxss */

page {
  background: #fff;
}

.ea_header {
  text-align: center;
  background: #ff8d97;
  height: 94rpx;
  line-height: 94rpx;
}

.ea_header  icon {
  float: left;
  padding-left: 26rpx;
  color: #fff;
}

.ea_header text {
  color: #fff;
  font-size: 38rpx;
  margin-left: -26rpx;
}

.ea_body {
  padding: 0 26rpx;
  height: 100%;
  /* padding-top: 94rpx; */
}

.ea_body form {
  overflow: hidden;
}

.ea_body .section {
  border-bottom: 1px solid #e4e4e4;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  margin-top: 44rpx;
}

.section .form_title {
  font-size: 28rpx;
  color: #555;
  display: inline-flex;
  justify-content: flex-start;
}

.section .text_left {
  width: 140rpx;
}

.section icon {
  color: #b6b6b6;
}

.section picker {
  width: 494rpx;
  margin-left: 42rpx;
}

.section picker text {
  font-size: 28rpx;
  color: #555;
}

.section  input {
  width: 440rpx;
}

.section .input-placeholder {
  font-size: 24rpx;
  color: #bbb;
}

.section view {
  width: 40rpx;
}
.section .picker{
  width: 440rpx;
}
.section .picker .picker_placeholder{
  font-size:24rpx;
  color: #bbb;
}
.saveInfo {
  border: none !important;
  margin-top: 126rpx;
}

.saveInfo button {
  width: 460rpx;
  height: 86rpx;
  line-height: 86rpx;
  border: none;
  background: #ff8d97;
  color: #fff;
  outline: none;
  font-size: 40rpx;
  border-radius: 20rpx;
}

.invalid {
  position: fixed;
  width: 100%;
  color: #fff;
  bottom: 0;
  background: #ff8d97;
  text-align: center;
}
