/* pages/addComment/addComment.wxss */

.add_com {
  height: 100%;
  background: #f2f2f2;
}

.addComlist {
}

.comInfo {
  background: #fff;
}

.comInfo .comPro {
  padding: 0 26rpx;
  height: 230rpx;
  border-bottom: 1px solid #ebebeb;
  display: flex;
  align-items: center;
}

.comPro .pro_img {
  float: left;
  margin-left: 18rpx;
  margin-right: 30rpx;
  position: relative;
}

.pro_img image {
  width: 190rpx;
  height: 186rpx;
}

.pro_img .pro_tips {
  width: 190rpx;
  height: 52rpx;
  background: rgba(0, 0, 0, 0.6);
  line-height: 52rpx;
  text-align: center;
  position: absolute;
  bottom: 0;
}

.pro_tips text {
  color: #fff;
  font-size: 24rpx;
}

.comPro .pro_info {
  width: 100%;
}

.pro_info .pro_title {
  font-size: 30rpx;
  /* font-weight: bold; */
  color: #444;
  margin-top: 30rpx;
  height: 80rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.pro_info .pro_spec {
  overflow: hidden;
  height: 82rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.pro_spec .pro_price {
  font-family: 'DIN';
  width: 240rpx;
}

.pro_price .peo_nowprice {
  color: #ff8d97;
  font-size: 30rpx;font-weight: bold;
}

.pro_price .pro_integral {
  font-size: 30rpx;font-weight: bold;
  color: #ff8d97;
}

.pro_price .pro_inter_img {
  display: inline-flex;
  align-items: flex-end;
  /* margin-right: 30rpx; */
}

.pro_price .pro_inter_img .iconfont {
  font-size: 30rpx;font-weight: bold;
  color: #ff8d97;
  display: inline-flex;
}

/* .pro_price .pro_inter_img image {
  width: 24rpx;
  height: 20rpx;
} */

.pro_price .pro_orig {
  font-size: 24rpx;
  color: #b8b8b8;
  text-decoration: line-through;
}

.pro_weight text {
  font-size: 20rpx;
  color: #888;
  font-weight: 'DIN';
  margin-right: 10rpx;
}

.pro_btn {
  display: inline-flex;
}

.pro_btn button {
  margin-right: 16rpx;
  border: 1px solid #808080;
  color: #808080;
  background: transparent;
  border-radius: 50rpx;
  font-size: 26rpx;
  width: 160rpx;
  padding: 0 26rpx;
}

.pro_btn .btn_red {
  border-color: #f06b90;
  color: #f06b90;
  font-size: 24rpx;
}

.pro_btn .btn_default {
  font-size: 24rpx;
}

.comText {
  padding: 26rpx;
  border-bottom: 1px solid #ebebeb;
}

.comText .phcolor {
  font-size: 30rpx;
  /* font-weight: bold; */
}

.comText textarea {
  min-height: 180rpx;
  width: 100%;
}

.com_imgList {
  /* display: flex;
  justify-content: flex-start;
  align-items: center; */
  overflow: hidden;
  padding: 10rpx 0;
}

.com_imgList .imgBlock {
  position: relative;
  margin: 10rpx;
  /* display: inline-flex; */
  float: left;
}

.imgBlock .iconfont {
  position: absolute;
  top: -28rpx;
  right: 0;
  color: #ff8d97;
  z-index: 20;
}

.imgBlock text {
  display: blcok;
  position: absolute;
  top: -3rpx;
  right: 6rpx;
  background: #fff;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  z-index: 10;
}

.imgBlock image {
  width: 130rpx;
  height: 130rpx;
}

.com_imgList .addicon {
  font-size: 125rpx;
  color: #a4a4a4;
}

/* 评价星星 */

.comStar {
  padding: 26rpx;
  border-bottom: 1px solid #ebebeb;
}

.comStar .title {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 30rpx;
  /* font-weight: bold; */
  margin-bottom: 20rpx;
}

.title .iconfont {
  display: inline-flex;
  color: #a4a4a4;
  margin-right: 10rpx;
  font-size: 30rpx;
  /* font-weight: bold; */
}

.comStar .starInfo {
  display: flex;
  align-items: center;
  padding: 14rpx 0;
}

.starInfo .starTitle {
  font-size: 30rpx;
  /* font-weight: bold; */
  color: #444;
}

.starInfo .star {
  display: inline-flex;
}

.starInfo .star .iconfont {
  display: inline-flex;
  margin: 0 4rpx;
}

.starInfo .star .light {
  color: #ff8d97;
}

.comBtn {
  margin-top: 40rpx;
}

.comBtn button {
  width: 460rpx;
  height: 86rpx;
  line-height: 86rpx;
  border: none;
  background: #ff8d97;
  color: #fff;
  outline: none;
  font-size: 40rpx;
  border-radius: 20rpx;
}
