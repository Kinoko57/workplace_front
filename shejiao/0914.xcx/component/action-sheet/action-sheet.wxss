.wx-action-sheet {
  width: 100%;
  height: 100%;
  position: fixed;
}

.wx-mask {
  position: fixed;
  z-index: 900;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
}

.wx-action-sheet {
  position: fixed;
  left: 0;
  z-index: 1000;
  top: calc(100% - 280rpx);
  animation: actionSheet 150ms ease-out;
  background: rgba(255, 255, 255, 0.9);
}

.as-wx-action-sheet {
  width: 100%;
  position: fixed;
  left: 0;
  z-index: 1000;
  top: calc(100% - 280rpx - 68rpx);
  animation: asActionSheet 150ms ease-out;
  background: rgba(255, 255, 255, 0.8);
}

.wx-select {
  width: 100%;
  text-align: center;
  height: 144rpx;
  border-bottom: 2rpx solid #e0e0e0;
  padding: 20rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;

}
.wx-select-block{
  margin: 0 10rpx;
}

.wx-select .del_bg {
  width: 90rpx;
  height: 90rpx;
  margin: 0 auto;
  background: rgba(255, 255, 255, 0.6);
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 6rpx;
}

.wx-select .text{
  font-size: 26rpx;
  color: #333;
}

.wx-action {
  display: block;
  font-size: 28rpx;
  color: #fc2e47;
  padding-top: 16rpx;
  font-weight: 600;
}

.wx-action-tips {
  display: block;
  font-size: 20rpx;
  color: #cecece;
  margin-top: 6rpx;
}

.wx-cancel {
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-weight: 600;
}

.wx-cancel .cancel {
  color: #555;
  font-size: 28rpx;
}

.safe-area {
  width: 100%;
  height: 68rpx;
  background: #ededed;
}

@keyframes actionSheet {
  from {
    top: 100%;
  }

  to {
    top: calc(100% - 200rpx);
  }
}

@keyframes asActionSheet {
  from {
    top: 100%;
  }

  to {
    top: calc(100% - 200rpx - 68rpx);
  }
}
