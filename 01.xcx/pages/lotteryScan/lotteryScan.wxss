/* 我的中奖列表 */

.win_bg {
  position: fixed;
  z-index: 50;
  background: rgba(0, 0, 0, 0.4);
  width: 100%;
  height: 100%;
  top: 0;
}

.myWin {
  position: fixed;
  width: 85%;
  /* height: 100%; */
  left: 50%;
  top: 45%;
  transform: translate(-50%, -50%);
  z-index: 100;
}

.myWin icon {
  position: absolute;
  right: 0;
  top: 0;
  font-size: 58rpx;
  color: #ffea00;
}

.myWin_list {
  width: 100%;
  height: 600rpx;
  border: 2rpx dotted #c20c08;
  border-radius: 10rpx;
  background: #f6d77a;
  margin: 0 auto;
  margin-top: 100rpx;
}

/* .myWin_list view:nth-child(2) {
  margin-top: 60rpx;
} */

.myWin_title {
  font-size: 28rpx;
  color: #6d4304;
  padding: 10rpx 18rpx;
  /* display: flex;
  justify-content: space-between;
  align-items: center; */
  border-bottom: 2rpx solid #bf9b4a;
  position: absolute;
  top: 15%;
  width: 94%;
  background: #f6d77a;
}

.myWin_title text {
  display: inline-flex;
  justify-content: center;
}

.myWin_title text:first-child {
  /* width: 45%; */
  width: 200rpx;
}

.myWin_title text:nth-child(2) {
  width: 40%;
}

.myWin_title text:nth-child(3) {
  width: 25%;
}

.myWin_list .myWin_news {
  margin-top: 10%;
  height: 530rpx;
  overflow: hidden;
}

.myWin_news .myWin_block {
  color: #6d4304;
  font-size: 24rpx;
  padding: 14rpx 18rpx;
  display: flex;
  align-items: center;
}

.myWin_block text {
  display: inline-flex;
  justify-content: center;
  text-align: center;
}

.myWin_block text:first-child {
  width: 200rpx;
}

.myWin_block text:nth-child(2) {
  width: 40%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.myWin_block text:nth-child(3) {
  width: 25%;
}
