/* 转盘 */

.canvas-container ul, .canvas-container li {
  margin: 0;
  padding: 0;
  list-style: none;
}

.canvas-container {
  margin: 0 auto;
  position: relative;
  width: 562rpx;
  height: 562rpx;
  border-radius: 50%;
  /* border: 4rpx solid #e44025;
  box-shadow: 0 4rpx 6rpx #333, 0 0 4rpx #000; */
}

.canvas-content {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 20;
  display: block;
  width: inherit;
  height: inherit;
  /* border-radius: inherit;
  background-clip: padding-box;
  background-color: #ffcb3f; */
}

.canvas-element {
  width: 562rpx;
  height: 562rpx;
}

.canvas-list {
  position: absolute;
  left: 0;
  top: 0;
  width: inherit;
  height: inherit;
  z-index: 30;
}

.canvas-item {
  position: absolute;
  left: 0;
  top: 8rpx;
  width: 100%;
  height: 100%;
  color: #fff;
  /* font-weight: bold; *//* text-shadow: 0 1px 1px rgba(255, 255, 255, 0.6); */
}

.canvas-item-text {
  position: relative;
  display: block;
  padding-top: 28rpx;
  /* width: 50px; */
  margin: 0 auto;
  text-align: center;
  -webkit-transform-origin: 50% 270rpx;
  transform-origin: 50% 270rpx;
  font-size: 22rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 144rpx;
}

.canvas-item-img {
  -webkit-transform-origin: 42% 190rpx;
  transform-origin: 42% 190rpx;
  position: absolute;
  left: 256rpx;
  top: 82rpx;
  /* border-radius: 50%; */
}

.canvas-btn {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 50;
  width: 200rpx;
  height: 210rpx;
  border-radius: 50%;
  color: #f4e9cc;
  line-height: 160rpx;
  text-align: center;
}

.gb-run {
  -webkit-transition: all 6s ease;
  transition: all 6s ease;
}

.l_info {
  width: 640rpx;
  text-align: center;
  position: absolute;
