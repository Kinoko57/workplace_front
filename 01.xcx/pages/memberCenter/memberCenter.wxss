/* 空白的块，解决底部导航占领高度 */

.vipDetail_bg {
  position: fixed;
  background: rgba(0, 0, 0, 0.4);
  width: 100%;
  height: 100%;
  top: 0;
  z-index: 50;
}

.vipDetail {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  /* height: 50%; */
  z-index: 100;
  background: #fff;
  border-radius: 20rpx;
}

.vip_head {
  text-align: center;
  margin: 40rpx 0;
}

.richtext {
  /* margin: 20rpx; */
  width: 90%;
  margin: 0 auto;
}

.richtext text {
  font-size: 30rpx;
  font-weight: bold;
  color: #666;
  word-wrap: break-word;
  width: 96%;
  display: block;
}

.vip_btn {
  margin: 20rpx;
}

.vip_btn button {
  background: #ff8d97;
  color: #fff;
  font-size: 28rpx;
  border-radius: 20rpx;
}
