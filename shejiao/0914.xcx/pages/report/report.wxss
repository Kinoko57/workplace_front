/* pages/report/report.wxss */
page{
  background: #333;
}
.report_bg{
  width: 100%;
  height: 100%;
}
.report_body{
  border-top:1px solid rgba(67,67,67,1);
  padding: 0 24rpx;
}
.report_block{
  padding:48rpx 0 56rpx 15rpx;
  border-bottom: 1px solid #434343;
}
.report_cause{
  color: #fff;
  font-size: 28rpx;
}
.report_titi{
 color: #B9B9B9;
 display: flex;
 align-items: center;
 justify-content: space-between;
 font-size: 26rpx;
 padding-top: 80rpx;
 padding-bottom: 30rpx;
}
.add_detail{
  padding: 10rpx 0 20rpx;
}
.add_detail textarea{
  color: #B9B9B9;
  font-size: 26rpx;
  max-height: 190rpx;
  min-height: 120rpx;
}
.input_placeholder{
  font-size: 26rpx;
  color: #575757;
}
.report_upload{
  width: 132rpx;
  height: 132rpx;
  background: #535353;
  border-radius: 8rpx;
  text-align: center;
}
.report_upload image{
  width: 50rpx;
  height: 46rpx;
  margin-top: 30rpx;
}
.report_upload view{
  font-size: 26rpx;
  color: #B9B9B9;
  text-align: center;
  padding-top: 10rpx;
}
.report_tips{
  font-size: 26rpx;
  color: #999;
  padding-top: 40rpx;
  line-height: 1.6;
}
.report_btn{
  width: 690rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin: 80rpx auto 0;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
}
/* 添加图片显示样式 */
.add_upload_img{
  display: flex;
  flex-wrap: wrap;
}
.upload_block{
  position: relative;
  width: 132rpx;
  height: 132rpx;
  margin-right: 15rpx;
  margin-bottom: 10rpx;
}
.upload_block .upload_block_img{
  width: 132rpx;
  height: 132rpx;
  border-radius: 10rpx;
}
.upload_block icon{
  position: absolute;
  display: inline-flex;
  top: 0;
  right: 0;
  font-size: 24rpx;
}